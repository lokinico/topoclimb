{% extends "layouts/app.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="sites-index">
    <div class="container">
        
        <!-- En-tête avec breadcrumb -->
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="/regions">Régions</a></li>
                    <li class="breadcrumb-item"><a href="/regions/{{ region.id }}">{{ region.name }}</a></li>
                    <li class="breadcrumb-item active">Sites</li>
                </ol>
            </nav>
            
            <div class="page-title-section">
                <h1>Sites de {{ region.name }}</h1>
                <p class="text-muted">
                    Sites d'escalade organisés en sous-zones de la région
                </p>
            </div>

            <div class="page-actions">
                <a href="/sites/create?region_id={{ region.id }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouveau site
                </a>
                <a href="/sites/selector?mode=select&region_id={{ region.id }}" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i> Sélecteur hiérarchique
                </a>
            </div>
        </div>

        <!-- Barre de recherche et filtres -->
        <div class="filters-section">
            <form method="GET" class="search-form">
                <input type="hidden" name="region_id" value="{{ region.id }}">
                <div class="row align-items-end">
                    <div class="col-md-8">
                        <label for="search" class="form-label">Rechercher un site</label>
                        <input type="text" 
                               id="search" 
                               name="search" 
                               class="form-control" 
                               placeholder="Nom ou description du site..."
                               value="{{ search }}">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i> Rechercher
                        </button>
                        {% if search %}
                        <a href="/sites?region_id={{ region.id }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Effacer
                        </a>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>

        <!-- Résultats -->
        <div class="sites-results">
            
            {% if search %}
            <div class="search-info">
                <p class="text-muted">
                    <i class="fas fa-search"></i>
                    {{ sites|length }} résultat(s) pour "{{ search }}"
                </p>
            </div>
            {% endif %}

            {% if sites is empty %}
            
                {% if search %}
                <div class="empty-results">
                    <div class="empty-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Aucun site trouvé</h3>
                    <p>Aucun site ne correspond à votre recherche "{{ search }}"</p>
                    <a href="/sites?region_id={{ region.id }}" class="btn btn-primary">
                        Voir tous les sites
                    </a>
                </div>
                {% else %}
                <div class="empty-results">
                    <div class="empty-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h3>Aucun site dans cette région</h3>
                    <p>Cette région ne contient pas encore de sites d'escalade organisés.</p>
                    <p class="text-muted">
                        Les secteurs peuvent être directement attachés à la région ou organisés en sites.
                    </p>
                    <div class="empty-actions">
                        <a href="/sites/create?region_id={{ region.id }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer le premier site
                        </a>
                        <a href="/regions/{{ region.id }}" class="btn btn-outline-primary">
                            <i class="fas fa-climbing"></i> Voir les secteurs de la région
                        </a>
                    </div>
                </div>
                {% endif %}

            {% else %}

            <!-- Grille des sites -->
            <div class="sites-grid">
                {% for site in sites %}
                <div class="site-card">
                    <div class="site-header">
                        <h3 class="site-name">
                            <a href="/sites/{{ site.id }}">{{ site.name }}</a>
                        </h3>
                        <div class="site-code">{{ site.code|upper }}</div>
                    </div>

                    {% if site.description %}
                    <p class="site-description">
                        {{ site.description|truncate(120) }}
                    </p>
                    {% endif %}

                    <div class="site-stats">
                        <div class="stat-item">
                            <i class="fas fa-climbing"></i>
                            <span class="stat-value">{{ site.sector_count }}</span>
                            <span class="stat-label">secteur{{ site.sector_count > 1 ? 's' : '' }}</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-route"></i>
                            <span class="stat-value">{{ site.route_count }}</span>
                            <span class="stat-label">voie{{ site.route_count > 1 ? 's' : '' }}</span>
                        </div>
                        {% if site.avg_beauty %}
                        <div class="stat-item">
                            <i class="fas fa-star"></i>
                            <span class="stat-value">{{ site.avg_beauty|number_format(1) }}</span>
                            <span class="stat-label">beauté moy.</span>
                        </div>
                        {% endif %}
                    </div>

                    {% if site.min_difficulty and site.max_difficulty %}
                    <div class="site-difficulty">
                        <span class="difficulty-range">
                            {{ site.min_difficulty }} - {{ site.max_difficulty }}
                        </span>
                    </div>
                    {% endif %}

                    <div class="site-meta">
                        {% if site.year %}
                        <span class="meta-item">
                            <i class="fas fa-calendar"></i> {{ site.year }}
                        </span>
                        {% endif %}
                        {% if site.publisher %}
                        <span class="meta-item">
                            <i class="fas fa-book"></i> {{ site.publisher }}
                        </span>
                        {% endif %}
                    </div>

                    <div class="site-actions">
                        <a href="/sites/{{ site.id }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> Voir détail
                        </a>
                        <a href="/sites/{{ site.id }}/edit" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% endif %}

        </div>

        <!-- Navigation vers autres niveaux -->
        <div class="navigation-section">
            <h3>Navigation hiérarchique</h3>
            <div class="nav-links">
                <a href="/regions" class="nav-link">
                    <i class="fas fa-mountain"></i>
                    <div>
                        <strong>Toutes les régions</strong>
                        <small>Explorer d'autres régions</small>
                    </div>
                </a>
                <a href="/regions/{{ region.id }}" class="nav-link">
                    <i class="fas fa-climbing"></i>
                    <div>
                        <strong>Secteurs de {{ region.name }}</strong>
                        <small>Secteurs directement dans la région</small>
                    </div>
                </a>
                <a href="/sites/selector?region_id={{ region.id }}" class="nav-link">
                    <i class="fas fa-search"></i>
                    <div>
                        <strong>Sélecteur hiérarchique</strong>
                        <small>Outil de navigation avancé</small>
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>
{% endblock %}

{% block styles %}
<link rel="stylesheet" href="/css/pages/sites/index.css">
{% endblock %}

{% block scripts %}
<script src="/js/pages/sites/index.js"></script>
{% endblock %}