{% extends "layouts/app.twig" %}

{% block title %}Sites d'escalade - TopoclimbCH{% endblock %}

{% block body_class %}sites-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ url('/css/pages-common.css') }}">
    <link rel="stylesheet" href="{{ url('/css/view-modes.css') }}">
{% endblock %}

{% block content %}
<div class="page-container">
    <!-- En-tête épuré -->
    <div class="page-header-clean">
        <div class="container">
            <div class="page-header-content">
                <div class="page-header-text">
                    <h1 class="page-title">
                        <i class="fas fa-map-marker-alt"></i>
                        Sites d'escalade
                    </h1>
                    <p class="page-subtitle">
                        Découvrez les sites d'escalade et leurs secteurs
                    </p>
                </div>
                
                <!-- Bouton Create pour les admins -->
                {% if user and user.autorisation in ['0', '1', '2'] %}
                <div class="page-header-actions">
                    <a href="{{ url('/sites/create') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i>
                        Nouveau site
                    </a>
                </div>
                {% endif %}
            </div>
            
            <!-- Statistiques simples -->
            <div class="page-stats">
                <span class="stat">
                    <strong>{{ pagination.total|default(sites|length) }}</strong> Sites
                </span>
                <span class="stat">
                    <strong>0</strong> Secteurs
                </span>
                <span class="stat">
                    <strong>0</strong> Voies
                </span>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="container">
        <!-- Filtres avancés unifiés -->
        {% include 'components/advanced-filters.twig' with {
            'entity': 'sites',
            'currentFilters': currentFilters|default({}),
            'regions': regions|default([])
        } %}

        <!-- Barre d'outils avec contrôles de vue -->
        <div class="toolbar">
            <div class="results-info">
                <span class="text-muted">{{ pagination.total|default(sites|length) }} site(s) trouvé(s)</span>
            </div>
            
            <!-- Contrôles de vue -->
            <div class="view-controls">
                <div class="btn-group" role="group" aria-label="Mode d'affichage">
                    <button type="button" class="btn btn-outline-primary active" data-view="grid">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="list">
                        <i class="fas fa-list"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="compact">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Conteneur des vues -->
        <div class="sites-container entities-container" id="sites-container">
            <!-- Vue grille (cartes) -->
            <div class="sites-grid entities-grid view-grid active" id="sites-grid">
                {% if sites is defined and sites|length > 0 %}
                    {% for site in sites %}
                        <div class="site-card entity-card" data-site-id="{{ site.id }}">
                            <div class="card-header">
                                <h3 class="entity-title">{{ site.name }}</h3>
                                {% if site.region_name %}
                                    <span class="entity-badge">{{ site.region_name }}</span>
                                {% endif %}
                            </div>
                            
                            <div class="card-body">
                                {% if site.description %}
                                    <p class="entity-description">{{ site.description|slice(0, 120) }}{{ site.description|length > 120 ? '...' : '' }}</p>
                                {% endif %}
                                
                                <div class="entity-meta">
                                    {% if site.altitude %}
                                        <span class="meta-item">
                                            <i class="fas fa-mountain"></i>
                                            {{ site.altitude }}m
                                        </span>
                                    {% endif %}
                                    {% if site.access_time %}
                                        <span class="meta-item">
                                            <i class="fas fa-clock"></i>
                                            {{ site.access_time }}min
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="card-actions">
                                <a href="/sites/{{ site.id }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Voir
                                </a>
                                
                                <div class="quick-actions">
                                    <button class="btn-action" title="Météo" data-action="weather" data-id="{{ site.id }}">
                                        <i class="fas fa-cloud-sun"></i>
                                    </button>
                                    <button class="btn-action" title="Carte" data-action="map" data-id="{{ site.id }}">
                                        <i class="fas fa-map"></i>
                                    </button>
                                    <button class="btn-action" title="Favoris" data-action="favorite" data-id="{{ site.id }}">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h3>Aucun site trouvé</h3>
                        <p>Aucun site ne correspond à vos critères de recherche.</p>
                    </div>
                {% endif %}
            </div>
            
            <!-- Vue liste -->
            <div class="sites-list entities-list view-list" id="sites-list">
                {% if sites is defined and sites|length > 0 %}
                    {% for site in sites %}
                        <div class="site-list-item entity-list-item" data-site-id="{{ site.id }}">
                            <div class="item-content">
                                <h4 class="item-title">{{ site.name }}</h4>
                                {% if site.region_name %}
                                    <p class="item-subtitle">{{ site.region_name }}</p>
                                {% endif %}
                                {% if site.description %}
                                    <p class="item-description">{{ site.description|slice(0, 150) }}{{ site.description|length > 150 ? '...' : '' }}</p>
                                {% endif %}
                                <div class="item-meta">
                                    {% if site.altitude %}
                                        <span><i class="fas fa-mountain"></i> {{ site.altitude }}m</span>
                                    {% endif %}
                                    {% if site.access_time %}
                                        <span><i class="fas fa-clock"></i> {{ site.access_time }}min</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="/sites/{{ site.id }}" class="btn btn-primary">Voir</a>
                                <button class="btn btn-outline-secondary" title="Météo" data-action="weather" data-id="{{ site.id }}">
                                    <i class="fas fa-cloud-sun"></i>
                                </button>
                                <button class="btn btn-outline-secondary" title="Carte" data-action="map" data-id="{{ site.id }}">
                                    <i class="fas fa-map"></i>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            <!-- Vue compacte -->
            <div class="sites-compact entities-compact view-compact" id="sites-compact">
                {% if sites is defined and sites|length > 0 %}
                    {% for site in sites %}
                        <div class="site-compact-item entity-compact-item" data-site-id="{{ site.id }}">
                            <div class="compact-name">
                                <a href="/sites/{{ site.id }}">{{ site.name }}</a>
                            </div>
                            <div class="compact-meta">
                                {% if site.region_name %}
                                    <span class="compact-region">{{ site.region_name }}</span>
                                {% endif %}
                                {% if site.altitude %}
                                    <span class="compact-altitude">{{ site.altitude }}m</span>
                                {% endif %}
                            </div>
                            <div class="compact-actions">
                                <button title="Météo" data-action="weather" data-id="{{ site.id }}"><i class="fas fa-cloud-sun"></i></button>
                                <button title="Carte" data-action="map" data-id="{{ site.id }}"><i class="fas fa-map"></i></button>
                                <button title="Favoris" data-action="favorite" data-id="{{ site.id }}"><i class="fas fa-heart"></i></button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <!-- Pagination -->
        {% if pagination is defined and pagination.total_pages > 1 %}
        <nav aria-label="Navigation des pages" class="pagination-nav">
            <ul class="pagination justify-content-center">
                {% if pagination.current_page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page - 1 }}">
                            <i class="fas fa-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% endif %}
                
                {% for page in 1..pagination.total_pages %}
                    {% if page == pagination.current_page %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page == 1 or page == pagination.total_pages or (page >= pagination.current_page - 2 and page <= pagination.current_page + 2) %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == pagination.current_page - 3 or page == pagination.current_page + 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}
                
                {% if pagination.current_page < pagination.total_pages %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page + 1 }}">
                            Suivant <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}
    </div>
</div>

<script src="{{ url('/js/pages-common.js') }}"></script>
<script src="{{ url('/js/view-manager.js') }}"></script>
{% endblock %}