{% extends "layouts/app.twig" %}

{% block title %}Sites d'escalade - TopoclimbCH{% endblock %}

{% block body_class %} sites-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ url('/css/pages-common.css') }}">
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Sites d'escalade</h1>
        <div class="header-actions">
            <a href="{{ url('/sites/create') }}" class="btn btn-primary">
                <i class="fa fa-plus mr-1"></i> Nouveau site
            </a>
        </div>
    </div>
</div>

<!-- Filtres avancés unifiés -->
{% include 'components/advanced-filters.twig' with {
    'entity': 'sites',
    'currentFilters': currentFilters,
    'regions': regions
} %}

<!-- Résultats -->
<div class="results-section">
    {% if sites|length > 0 %}
        <div class="results-info">
            <div class="d-flex justify-content-between align-items-center">
                <span class="results-text">
                    <i class="fas fa-map-marker-alt text-primary"></i>
                    <strong>{{ pagination.total }}</strong> site{{ pagination.total > 1 ? 's' : '' }} trouvé{{ pagination.total > 1 ? 's' : '' }}
                    {% if currentFilters.search or currentFilters.region_id %}
                        <span class="text-muted"> | Filtres actifs</span>
                    {% endif %}
                </span>
                <div class="view-options">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-secondary active" id="grid-view">
                            <i class="fas fa-th"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="list-view">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="sites-grid entities-grid">
            {% for site in sites %}
                <div class="site-card entity-card card h-100">
                    <div class="card-body">
                        <!-- Actions rapides -->
                        <div class="site-quick-actions entity-quick-actions">
                            <button class="quick-action-btn" title="Ajouter aux favoris" data-site-id="{{ site.id }}">
                                <i class="fas fa-heart"></i>
                            </button>
                            {% if site.coordinates_lat and site.coordinates_lng %}
                                <a href="https://www.google.com/maps?q={{ site.coordinates_lat }},{{ site.coordinates_lng }}" 
                                   target="_blank" class="quick-action-btn" title="Voir sur la carte">
                                    <i class="fas fa-map-marker-alt"></i>
                                </a>
                            {% endif %}
                            <button class="quick-action-btn" title="Partager" data-site-id="{{ site.id }}">
                                <i class="fas fa-share-alt"></i>
                            </button>
                        </div>
                        <div class="site-header d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="card-title mb-1">
                                    <a href="{{ url('/sites/' ~ site.id) }}" class="text-decoration-none">
                                        {{ site.name }}
                                    </a>
                                </h5>
                                <div class="site-meta small text-muted">
                                    <span class="site-code">{{ site.code }}</span>
                                    {% if site.region_name %}
                                        • <span class="site-region">{{ site.region_name }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="site-actions dropdown">
                                <button class="btn btn-link btn-sm" type="button" 
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="{{ url('/sites/' ~ site.id) }}">
                                            <i class="fa fa-eye mr-2"></i> Voir détails
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ url('/sites/' ~ site.id ~ '/edit') }}">
                                            <i class="fa fa-edit mr-2"></i> Modifier
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ url('/sectors/create?site_id=' ~ site.id) }}">
                                            <i class="fa fa-plus mr-2"></i> Ajouter secteur
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        {% if site.description %}
                            <p class="card-text text-muted small">
                                {{ site.description|slice(0, 120) }}{% if site.description|length > 120 %}...{% endif %}
                            </p>
                        {% endif %}

                        <div class="site-stats">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-value">{{ site.sectors_count|default(0) }}</div>
                                    <div class="stat-label small text-muted">Secteurs</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-value">{{ site.routes_count|default(0) }}</div>
                                    <div class="stat-label small text-muted">Voies</div>
                                </div>
                                <div class="col-4">
                                    {% if site.altitude %}
                                        <div class="stat-value">{{ site.altitude }}m</div>
                                        <div class="stat-label small text-muted">Altitude</div>
                                    {% else %}
                                        <div class="stat-value">-</div>
                                        <div class="stat-label small text-muted">Altitude</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {% if site.coordinates_lat and site.coordinates_lng %}
                            <div class="site-location mt-2">
                                <small class="text-muted">
                                    <i class="fa fa-map-marker-alt mr-1"></i>
                                    {{ site.coordinates_lat|number_format(6) }}, {{ site.coordinates_lng|number_format(6) }}
                                </small>
                            </div>
                        {% endif %}
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ url('/sites/' ~ site.id) }}" class="btn btn-outline-primary btn-sm">
                                Voir détails
                            </a>
                            
                            {% if site.coordinates_lat and site.coordinates_lng %}
                                <a href="https://www.google.com/maps?q={{ site.coordinates_lat }},{{ site.coordinates_lng }}" 
                                   target="_blank" class="btn btn-outline-secondary btn-sm">
                                    <i class="fa fa-map-marker-alt"></i> Carte
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination unifiée -->
        {% include 'components/pagination.twig' with {
            'pagination': pagination,
            'currentFilters': currentFilters,
            'baseUrl': url('/sites'),
            'entity': 'sites'
        } %}

    {% else %}
        <div class="empty-state text-center py-5">
            <div class="empty-icon mb-3">
                <i class="fa fa-mountain fa-3x text-muted"></i>
            </div>
            <h3 class="text-muted">Aucun site trouvé</h3>
            <p class="text-muted">
                {% if currentFilters.search or currentFilters.region_id %}
                    Aucun site ne correspond à vos critères de recherche.
                {% else %}
                    Il n'y a pas encore de sites d'escalade enregistrés.
                {% endif %}
            </p>
            <div class="mt-3">
                {% if currentFilters.search or currentFilters.region_id %}
                    <a href="{{ url('/sites') }}" class="btn btn-secondary me-2">
                        Voir tous les sites
                    </a>
                {% endif %}
                <a href="{{ url('/sites/create') }}" class="btn btn-primary">
                    Créer le premier site
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block scripts %}
<script src="{{ url('/js/pages-common.js') }}"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit du formulaire de filtres
    const filterInputs = document.querySelectorAll('#region_id, #search, #sort_by, #sort_dir');
    
    filterInputs.forEach(input => {
        input.addEventListener('change', function() {
            // Délai pour permettre à l'utilisateur de taper
            if (this.type === 'text') {
                clearTimeout(this.searchTimeout);
                this.searchTimeout = setTimeout(() => {
                    this.form.submit();
                }, 500);
            } else {
                this.form.submit();
            }
        });
    });

    // Gestion de la recherche en temps réel
    const searchInput = document.getElementById('search');
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            clearTimeout(this.searchTimeout);
            this.searchTimeout = setTimeout(() => {
                this.form.submit();
            }, 500);
        });
    }
});
</script>

<style>
.sites-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1.5rem;
}

.site-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 12px;
    overflow: hidden;
}

.site-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.stat-value {
    font-size: 1.2rem;
    font-weight: 600;
    color: #007bff;
}

.stat-label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #6c757d;
}

.site-actions .btn-link {
    color: #6c757d;
    padding: 0.25rem;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.site-actions .btn-link:hover {
    color: #495057;
    background-color: #f8f9fa;
}

.site-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.site-code {
    background: #e9ecef;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
}

.site-region {
    color: #007bff;
    text-decoration: none;
}

.site-region:hover {
    text-decoration: underline;
}

.empty-state {
    text-align: center;
    padding: 3rem 2rem;
    background: #f8f9fa;
    border-radius: 12px;
    border: 2px dashed #dee2e6;
}

.empty-icon i {
    opacity: 0.5;
    color: #6c757d;
}

.page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e9ecef;
}

.results-info {
    margin-bottom: 1rem;
    padding: 0.75rem 1rem;
    background: #f8f9fa;
    border-radius: 6px;
    border-left: 4px solid #007bff;
}

/* Actions rapides sur les cartes */
.site-quick-actions {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: flex;
    gap: 0.25rem;
    opacity: 0;
    transition: opacity 0.2s ease;
}

.site-card:hover .site-quick-actions {
    opacity: 1;
}

.quick-action-btn {
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    color: #6c757d;
    transition: all 0.2s ease;
    backdrop-filter: blur(10px);
}

.quick-action-btn:hover {
    background: #007bff;
    color: white;
    transform: scale(1.1);
}

.card-body {
    position: relative;
}

/* Animation d'entrée */
.site-card {
    animation: fadeInUp 0.6s ease-out both;
}

.site-card:nth-child(2) { animation-delay: 0.1s; }
.site-card:nth-child(3) { animation-delay: 0.2s; }
.site-card:nth-child(4) { animation-delay: 0.3s; }

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media (max-width: 768px) {
    .sites-grid {
        grid-template-columns: 1fr;
    }
    
    .site-quick-actions {
        opacity: 1; /* Toujours visible sur mobile */
    }
    
    .quick-action-btn {
        background: rgba(255, 255, 255, 0.95);
    }
}
</style>
{% endblock %}