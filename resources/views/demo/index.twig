{% extends "layouts/app.twig" %}

{% block title %}Découvrez TopoclimbCH - Démonstration{% endblock %}

{% block content %}
<div class="demo-page">
    <!-- Bannière de démonstration -->
    <div class="alert alert-info border-0 rounded-3 mb-4" style="background: linear-gradient(135deg, #4299e1 0%, #667eea 100%); color: white;">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="mb-1"><i class="fas fa-rocket me-2"></i>Bienvenue sur TopoclimbCH</h4>
                <p class="mb-0">Découvrez les sites d'escalade de Suisse avec un aperçu gratuit de notre plateforme</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/register" class="btn btn-light btn-lg fw-bold">
                    Créer un compte gratuit
                </a>
            </div>
        </div>
    </div>

    <!-- Statistiques de démonstration -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-primary mb-2">
                        <i class="fas fa-mountain"></i>
                    </div>
                    <h5 class="card-title">{{ limits.regions_max ?? 3 }}</h5>
                    <p class="text-muted small">Régions en aperçu</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-success mb-2">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h5 class="card-title">{{ limits.sites_per_region ?? 2 }}</h5>
                    <p class="text-muted small">Sites par région</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-warning mb-2">
                        <i class="fas fa-route"></i>
                    </div>
                    <h5 class="card-title">{{ limits.routes_per_sector ?? 5 }}</h5>
                    <p class="text-muted small">Voies par secteur</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="display-4 text-info mb-2">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h5 class="card-title">Aperçu</h5>
                    <p class="text-muted small">Mode démonstration</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4">
                    <h3 class="mb-0">Explorez l'escalade en Suisse</h3>
                </div>
                <div class="card-body">
                    <p class="lead text-muted mb-4">
                        TopoclimbCH vous permet de découvrir et explorer les plus beaux sites d'escalade de Suisse. 
                        Cette démonstration vous donne un aperçu de nos fonctionnalités.
                    </p>

                    <div class="demo-features">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-map text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Cartographie détaillée</h5>
                                        <p class="text-muted">Localisez précisément chaque site et secteur d'escalade</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-database text-success"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Base de données complète</h5>
                                        <p class="text-muted">Milliers de voies référencées et documentées</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-users text-warning"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Communauté active</h5>
                                        <p class="text-muted">Partagez vos ascensions et découvertes</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                            <i class="fas fa-mobile-alt text-info"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Mobile friendly</h5>
                                        <p class="text-muted">Accédez aux informations sur le terrain</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="demo-actions mt-5">
                        <h4>Commencez votre exploration</h4>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <a href="/demo/regions" class="btn btn-primary btn-lg me-md-2">
                                <i class="fas fa-mountain me-2"></i>Voir les régions
                            </a>
                            <a href="/register" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Créer un compte
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Limitations de la démo -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Mode démonstration
                    </h5>
                </div>
                <div class="card-body">
                    <div class="demo-limitations">
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-eye text-warning me-2"></i>
                                <small class="text-muted">Aperçu limité</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                <small class="text-muted">Coordonnées GPS masquées</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-lock text-secondary me-2"></i>
                                <small class="text-muted">Détails complets protégés</small>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="upgrade-prompt text-center">
                        <h6 class="text-primary">Accès complet gratuit</h6>
                        <p class="small text-muted mb-3">
                            Créez un compte gratuit pour accéder à toutes les fonctionnalités
                        </p>
                        <a href="/register" class="btn btn-primary btn-sm">
                            S'inscrire maintenant
                        </a>
                    </div>
                </div>
            </div>

            <!-- Témoignages -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body text-center">
                    <blockquote class="blockquote">
                        <p class="mb-0">"Une ressource indispensable pour tout grimpeur en Suisse"</p>
                    </blockquote>
                    <figcaption class="blockquote-footer mt-2">
                        <cite title="Grimpeur local">Marc, Valais</cite>
                    </figcaption>
                </div>
            </div>
        </div>
    </div>
</div>

{% if demo_mode %}
    <!-- Watermark de démonstration -->
    <div class="demo-watermark position-fixed bottom-0 end-0 m-3 opacity-75">
        <span class="badge bg-primary px-3 py-2">
            <i class="fas fa-eye me-2"></i>Mode Démo
        </span>
    </div>
{% endif %}

{% endblock %}