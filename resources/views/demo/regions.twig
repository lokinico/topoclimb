{% extends "layouts/app.twig" %}

{% block title %}Régions d'escalade - Aperçu{% endblock %}

{% block content %}
<div class="demo-regions-page">
    <!-- Bannière de démo -->
    {% if demo_mode %}
        <div class="alert alert-info border-0 mb-4" style="background: linear-gradient(90deg, #4299e1, #667eea);">
            <div class="row align-items-center text-white">
                <div class="col-md-8">
                    <h5 class="mb-1">
                        <i class="fas fa-eye me-2"></i>Mode Démonstration
                    </h5>
                    <p class="mb-0">Vous consultez un aperçu limité. {{ upgrade_message ?? 'Créez un compte gratuit pour plus de contenu' }}</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/register" class="btn btn-light fw-bold">
                        Accès complet
                    </a>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-mountain text-primary me-2"></i>
                    Régions d'escalade
                    {% if demo_mode %}
                        <span class="badge bg-warning ms-2">Aperçu</span>
                    {% endif %}
                </h1>
                <p class="text-muted">Découvrez les plus beaux sites d'escalade de Suisse</p>
            </div>
        </div>
    </div>

    <!-- Statistiques démo -->
    {% if demo_mode and limits %}
        <div class="demo-stats mb-4">
            <div class="row">
                <div class="col-md-4">
                    <div class="stat-card bg-primary bg-opacity-10 p-3 rounded">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marked-alt fa-2x text-primary me-3"></i>
                            <div>
                                <div class="fw-bold">{{ regions|length }}/{{ limits.regions_max }}</div>
                                <small class="text-muted">Régions visibles</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card bg-success bg-opacity-10 p-3 rounded">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-lock fa-2x text-success me-3"></i>
                            <div>
                                <div class="fw-bold">Plus à découvrir</div>
                                <small class="text-muted">Avec un compte</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card bg-warning bg-opacity-10 p-3 rounded">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-eye fa-2x text-warning me-3"></i>
                            <div>
                                <div class="fw-bold">Aperçu</div>
                                <small class="text-muted">Données limitées</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Liste des régions -->
    <div class="regions-grid">
        <div class="row g-4">
            {% for region in regions %}
                <div class="col-lg-6">
                    <div class="card region-card border-0 shadow-sm h-100 {% if region.demo_mode %}demo-limited{% endif %}">
                        {% if region.demo_mode %}
                            <div class="position-relative">
                                <div class="demo-overlay position-absolute top-0 end-0 m-2 z-index-10">
                                    <span class="badge bg-warning">
                                        <i class="fas fa-eye me-1"></i>Aperçu
                                    </span>
                                </div>
                            </div>
                        {% endif %}

                        <div class="card-body">
                            <div class="region-header mb-3">
                                <h4 class="card-title mb-1">
                                    <i class="fas fa-mountain text-primary me-2"></i>
                                    {{ region.name }}
                                </h4>
                                
                                {% if region.demo_mode %}
                                    <div class="text-muted small">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Informations détaillées disponibles avec un compte
                                    </div>
                                {% endif %}
                            </div>

                            <div class="region-description">
                                <p class="text-muted">
                                    {{ region.description|slice(0, 200) }}
                                    {% if region.description|length > 200 %}...{% endif %}
                                </p>
                            </div>

                            <div class="region-stats">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="stat">
                                            <div class="stat-value text-primary fw-bold">
                                                {{ region.sites_count }}
                                                {% if region.demo_mode %}+{% endif %}
                                            </div>
                                            <div class="stat-label small text-muted">Sites</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat">
                                            <div class="stat-value text-success fw-bold">
                                                {{ region.sectors_count }}
                                                {% if region.demo_mode %}+{% endif %}
                                            </div>
                                            <div class="stat-label small text-muted">Secteurs</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat">
                                            <div class="stat-value text-warning fw-bold">
                                                {{ region.routes_count }}
                                                {% if region.demo_mode %}+{% endif %}
                                            </div>
                                            <div class="stat-label small text-muted">Voies</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if region.limited_access %}
                                <div class="demo-restrictions mt-3">
                                    <div class="alert alert-light border-0 small">
                                        <i class="fas fa-lock text-muted me-2"></i>
                                        Coordonnées GPS, accès détaillé et photos disponibles avec un compte
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            <div class="d-flex justify-content-between align-items-center">
                                {% if region.demo_mode %}
                                    <a href="/demo/sites?region_id={{ region.id }}" class="btn btn-outline-primary">
                                        <i class="fas fa-eye me-2"></i>Aperçu sites
                                    </a>
                                    <a href="/register" class="btn btn-primary btn-sm">
                                        <i class="fas fa-unlock me-1"></i>Accès complet
                                    </a>
                                {% else %}
                                    <a href="/regions/{{ region.id }}" class="btn btn-primary">
                                        <i class="fas fa-arrow-right me-2"></i>Explorer
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-mountain fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Aucune région disponible</h4>
                            <p class="text-muted">Les régions d'escalade seront bientôt disponibles.</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Appel à l'action pour upgrade -->
    {% if demo_mode %}
        <div class="demo-cta mt-5">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white text-center py-5">
                    <h3 class="mb-3">Découvrez tout le potentiel de TopoclimbCH</h3>
                    <p class="lead mb-4">
                        Accédez à toutes les régions, coordonnées GPS précises, météo en temps réel, 
                        communauté de grimpeurs et bien plus encore.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/register" class="btn btn-light btn-lg me-md-2">
                            <i class="fas fa-user-plus me-2"></i>Créer un compte gratuit
                        </a>
                        <a href="/login" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% if demo_mode %}
    <!-- Watermark fixe -->
    <div class="demo-watermark position-fixed bottom-0 end-0 m-3 opacity-75">
        <span class="badge bg-warning px-3 py-2">
            <i class="fas fa-eye me-2"></i>Mode Démo
        </span>
    </div>
{% endif %}
{% endblock %}

{% block scripts %}
<style>
.demo-limited {
    position: relative;
}

.demo-limited::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(255, 193, 7, 0.1) 10px,
        rgba(255, 193, 7, 0.1) 20px
    );
    pointer-events: none;
    border-radius: inherit;
}

.region-card:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease;
}

.demo-watermark {
    z-index: 1000;
}
</style>
{% endblock %}