    }
    #climbing-map { 
        width: 100%; 
        height: 100%; 
    }
    .simple-header {
        position: absolute;
        top: 10px;
        left: 10px;
        background: white;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
