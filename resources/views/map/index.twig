{% block scripts %}
<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" 
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" 
        crossorigin=""></script>

<script>
console.log('🚀 DÉMARRAGE DEBUG MAP');

// === ÉTAPE 1: VARIABLES ULTRA-SIMPLES ===
let map = null;
const sites = {{ sites|json_encode|raw }};

// Si pas de sites depuis le contrôleur, charger depuis l'API
let actualSites = sites;
if (!sites || sites.length === 0) {
    console.log('🔄 Pas de sites depuis le contrôleur, chargement depuis API...');
    fetch('/api/sites')
        .then(response => response.json())
        .then(data => {
            actualSites = data.data || data.sites || [];
            console.log('📡 Sites chargés depuis API:', actualSites);
            loadMarkersOnMap(actualSites);
        })
        .catch(error => console.error('❌ Erreur API:', error));
}

document.addEventListener('DOMContentLoaded', function() {
    console.log('📍 DOM Chargé, sites reçus:', sites);
    document.getElementById('sites-count').textContent = sites ? sites.length : 0;
    
    // === ÉTAPE 2: CRÉER CARTE BASIQUE ===
    try {
        console.log('🗺️ Initialisation carte...');
        document.getElementById('status').textContent = 'Création carte...';
        
        map = L.map('climbing-map', {
            center: [46.8182, 8.2275], // Centre Suisse
            zoom: 8
        });
        
        console.log('✅ Carte créée');
        document.getElementById('status').textContent = 'Ajout des tuiles...';
        
        // === ÉTAPE 3: TUILES SWISS TOPO CORRIGÉES ===
        // PROBLÈME: Les tuiles swisstopo utilisent une projection différente
        // SOLUTION: Utiliser OpenStreetMap qui marche toujours
        console.log('🗺️ Utilisation OpenStreetMap pour éviter les décalages...');
        
        const osmTiles = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors',
            maxZoom: 18
        });
        osmTiles.addTo(map);
        
        // TODO: Une fois que ça marche, on pourra essayer Swiss Topo avec la bonne projection
        
        console.log('✅ Tuiles OpenStreetMap ajoutées');
        document.getElementById('status').textContent = 'Ajout des marqueurs...';
        
        // === ÉTAPE 4: MARQUEURS - UTILISER LES VRAIES DONNÉES ===
        if (actualSites && actualSites.length > 0) {
            loadMarkersOnMap(actualSites);
        } else {
            console.log('❌ Aucun site trouvé, attendre chargement API...');
            document.getElementById('status').textContent = 'Chargement des sites...';
        }
        
    } catch (error) {
        console.error('💥 ERREUR:', error);
        document.getElementById('status').textContent = `ERREUR: ${error.message}`;
    }
});

// === FONCTION POUR CHARGER LES MARQUEURS ===
function loadMarkersOnMap(sitesData) {
    console.log('📍 Chargement des marqueurs pour', sitesData.length, 'sites');
    
    sitesData.forEach((site, index) => {
        console.log(`📌 Site ${index + 1}:`, site);
        
        // Vérifier les coordonnées (peut-être coordinates_lat/lng au lieu de lat/lng)
        const lat = site.latitude || site.coordinates_lat;
        const lng = site.longitude || site.coordinates_lng;
        
        if (lat && lng) {
            const marker = L.marker([lat, lng]).addTo(map);
            marker.bindPopup(`<b>${site.name}</b><br/>${site.description || site.region_name || ''}`);
            console.log(`✅ Marqueur ajouté pour ${site.name} à [${lat}, ${lng}]`);
        } else {
            console.log(`❌ Pas de coordonnées pour ${site.name}`, site);
        }
    });
    
    // Mettre à jour l'interface
    document.getElementById('sites-count').textContent = sitesData.length;
    document.getElementById('status').textContent = `✅ ${sitesData.length} sites chargés`;
}

