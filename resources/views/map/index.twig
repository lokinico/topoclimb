<script>
console.log('🚀 DÉMARRAGE DEBUG MAP');

// === ÉTAPE 1: VARIABLES ULTRA-SIMPLES ===
let map = null;
const sites = {{ sites|json_encode|raw }};

// Si pas de sites depuis le contrôleur, charger depuis l'API
let actualSites = sites;
if (!sites || sites.length === 0) {
    console.log('🔄 Pas de sites depuis le contrôleur, chargement depuis API...');
    console.log('🌐 Tentative fetch /api/sites...');
    
    fetch('/api/sites')
        .then(response => {
            console.log('📡 Réponse API reçue, status:', response.status);
            return response.json();
        })
        .then(data => {
            console.log('📦 Données API brutes:', data);
            actualSites = data.data || data.sites || [];
            console.log('📍 Sites extraits:', actualSites);
            console.log('📊 Nombre de sites:', actualSites.length);
            
            if (actualSites.length > 0) {
                loadMarkersOnMap(actualSites);
            } else {
                console.log('❌ Aucun site trouvé dans les données API');
                document.getElementById('status').textContent = 'Aucun site trouvé';
            }
        })
        .catch(error => {
            console.error('❌ Erreur API:', error);
            document.getElementById('status').textContent = 'Erreur chargement sites';
        });
} else {
    console.log('✅ Sites reçus du contrôleur:', sites.length);
}

document.addEventListener('DOMContentLoaded', function() {
    console.log('📍 DOM Chargé, sites reçus:', sites);
    document.getElementById('sites-count').textContent = sites ? sites.length : 0;
    
    // === ÉTAPE 2: CRÉER CARTE BASIQUE ===
    try {
        console.log('🗺️ Initialisation carte...');
        document.getElementById('status').textContent = 'Création carte...';
        
        map = L.map('climbing-map', {
            center: [46.8182, 8.2275], // Centre Suisse
            zoom: 8
        });
        
        console.log('✅ Carte créée');
        document.getElementById('status').textContent = 'Ajout des tuiles...';
        
        // === ÉTAPE 3: TUILES AVEC DIAGNOSTICS ===
        console.log('🗺️ Création tuiles OpenStreetMap avec diagnostics...');
        
        const osmTiles = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors',
            maxZoom: 18,
            // Forcer le rechargement si problème
            errorTileUrl: 'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg=='
        });
        
        // Événements de diagnostic
        osmTiles.on('loading', function() {
            console.log('📡 Début chargement tuiles...');
            document.getElementById('status').textContent = 'Chargement tuiles...';
        });
        
        osmTiles.on('load', function() {
            console.log('✅ Toutes les tuiles chargées !');
            document.getElementById('status').textContent = 'Tuiles chargées, ajout marqueurs...';
        });
        
        osmTiles.on('tileerror', function(e) {
            console.error('❌ Erreur tuile:', e);
            document.getElementById('status').textContent = 'Erreur tuiles détectée !';
        });
        
        osmTiles.addTo(map);
        
        // Forcer le redimensionnement après ajout
        setTimeout(() => {
            console.log('🔄 Redimensionnement forcé...');
            map.invalidateSize();
        }, 500);
        
        console.log('✅ Tuiles configurées avec diagnostics');
        document.getElementById('status').textContent = 'Attente chargement tuiles...';
        
        // === ÉTAPE 4: MARQUEURS - FORCER CHARGEMENT API ===
        console.log('🎯 Tentative chargement marqueurs, actualSites:', actualSites ? actualSites.length : 'undefined');
        
        if (actualSites && actualSites.length > 0) {
            loadMarkersOnMap(actualSites);
        } else {
            console.log('❌ Aucun site, FORCER chargement depuis API...');
            document.getElementById('status').textContent = 'Forçage chargement sites...';
            
            // FORCER le chargement API même si on a déjà essayé
            fetch('/api/sites')
                .then(response => {
                    console.log('🔄 FORCÉ - Status API:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('🔄 FORCÉ - Données API:', data);
                    const sitesFromApi = data.data || data.sites || [];
                    console.log('🔄 FORCÉ - Sites extraits:', sitesFromApi.length);
                    
                    if (sitesFromApi.length > 0) {
                        loadMarkersOnMap(sitesFromApi);
                    } else {
                        console.log('💥 FORCÉ - Toujours aucun site !');
                        document.getElementById('status').textContent = 'API ne retourne aucun site';
                    }
                })
                .catch(error => {
                    console.error('💥 FORCÉ - Erreur:', error);
                    document.getElementById('status').textContent = 'Erreur API forcée';
                });
        }
        
    } catch (error) {
        console.error('💥 ERREUR:', error);
        document.getElementById('status').textContent = `ERREUR: ${error.message}`;
    }
});

// === FONCTION POUR CHARGER LES MARQUEURS ===
function loadMarkersOnMap(sitesData) {
    console.log('📍 Chargement des marqueurs pour', sitesData.length, 'sites');
    
    sitesData.forEach((site, index) => {
        console.log(`📌 Site ${index + 1}:`, site);
        
        // Vérifier les coordonnées (peut-être coordinates_lat/lng au lieu de lat/lng)
        const lat = site.latitude || site.coordinates_lat;
        const lng = site.longitude || site.coordinates_lng;
        
        if (lat && lng) {
            const marker = L.marker([lat, lng]).addTo(map);
            marker.bindPopup(`<b>${site.name}</b><br/>${site.description || site.region_name || ''}`);
            console.log(`✅ Marqueur ajouté pour ${site.name} à [${lat}, ${lng}]`);
        } else {
            console.log(`❌ Pas de coordonnées pour ${site.name}`, site);
        }
    });
    
    // Mettre à jour l'interface
    document.getElementById('sites-count').textContent = sitesData.length;
    document.getElementById('status').textContent = `✅ ${sitesData.length} sites chargés`;
}

