<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carte Test - Escalade Suisse</title>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <style>
    /* CSS MINIMAL - ZERO CONFLITS */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body { height: 100%; }
    #map { height: 100vh; width: 100%; }
    </style>
</head>
<body>

<!-- CARTE SIMPLE - Z√âRO FRAMEWORK -->
<div id="map"></div>

<!-- Debug absolu -->
<div style="position: absolute; top: 10px; left: 10px; background: white; padding: 10px; z-index: 9999;">
    <strong>üó∫Ô∏è CARTE TEST</strong><br>
    Status: <span id="status">Initialisation...</span>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
// VERSION ABSOLUMENT BASIQUE - EXEMPLE OFFICIEL LEAFLET
console.log('üéØ VERSION BASIQUE ABSOLUE');

document.addEventListener('DOMContentLoaded', function() {
    const status = document.getElementById('status');
    status.textContent = 'Cr√©ation carte...';
    
    // Carte standard Leaflet - exemple de base
    const map = L.map('map').setView([46.8182, 8.2275], 8);
    
    status.textContent = 'Ajout tuiles...';
    
    // Tuiles OpenStreetMap standard
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 18,
        attribution: '¬© OpenStreetMap'
    }).addTo(map);
    
    status.textContent = 'Ajout marqueur test...';
    
    // Un marqueur test sur Saillon
    L.marker([46.1817, 7.1947])
        .addTo(map)
        .bindPopup('üèîÔ∏è Saillon - Site d\'escalade test')
        .openPopup();
    
    status.textContent = '‚úÖ Carte OK !';
    console.log('‚úÖ Carte basique cr√©√©e avec succ√®s');
});
</script>

</body>
</html>