{% extends "layouts/app.twig" %}

{% block title %}{{ sector.name|default('Secteur') }} - TopoclimbCH{% endblock %}

{% block content %}
    <div class="container">
        <h1>Secteur: {{ sector.name|default('Non trouvé') }}</h1>
        
        <p>ID: {{ sector.id }}</p>
        <p>Région: {{ sector.region_name|default('Non spécifiée') }}</p>
        
        <a href="{{ url('/sectors') }}" class="btn btn-primary">Retour à la liste</a>
    </div>
{% endblock %}