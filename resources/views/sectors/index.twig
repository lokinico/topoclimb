{% extends "layouts/app.twig" %}

{% block body_class %} sectors-index-page{% endblock %}

{% import 'components/pagination.twig' as pagination %}
{% import 'components/sector-filter.twig' as sectorFilter %}

{% block title %}Secteurs d'escalade - TopoclimbCH{% endblock %}

{% block content %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Secteurs d'escalade</h1>
            
            <div class="actions">
                {% if user and user.autorisation in ['0', '1', '2'] %}
                    <a href="{{ url('/sectors/create') }}" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Ajouter un secteur
                    </a>
                {% endif %}
            </div>
        </div>
        
        <!-- Barre de tri et de r√©sultats -->
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
            <div class="results-info">
                <span class="text-muted">{{ sectors.getTotal() }} secteur(s) trouv√©(s)</span>
            </div>
            
            <div class="d-flex align-items-center gap-2">
                <!-- Toggle vue carte/liste -->
                <button type="button" id="map-view-toggle" class="btn btn-outline-secondary btn-sm" title="Vue carte">
                    <i class="fas fa-map"></i>
                </button>
                
                <div class="sort-controls">
                    <div class="btn-group" role="group" aria-label="Options de tri">
                        <select name="sort_by" id="sort-select" class="form-select form-select-sm">
                            <option value="name" {{ sort_by == 'name' ? 'selected' : '' }}>Nom</option>
                            <option value="altitude" {{ sort_by == 'altitude' ? 'selected' : '' }}>Altitude</option>
                            <option value="access_time" {{ sort_by == 'access_time' ? 'selected' : '' }}>Temps d'acc√®s</option>
                            <option value="created_at" {{ sort_by == 'created_at' ? 'selected' : '' }}>Date de cr√©ation</option>
                        </select>
                        
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleSortDirection()" title="Inverser l'ordre">
                            <i class="fa fa-sort-{{ sort_dir == 'DESC' ? 'down' : 'up' }}"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filtres modernes -->
    <div class="filters mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="search-input" class="form-label">Recherche</label>
                <input type="text" id="search-input" class="form-control sector-filter" placeholder="Nom du secteur...">
            </div>
            <div class="col-md-3">
                <label for="region-filter" class="form-label">R√©gion</label>
                <select id="region-filter" class="form-select sector-filter">
                    <option value="">Toutes les r√©gions</option>
                    {% for region in regions %}
                        <option value="{{ region.id }}" {% if currentRegionId == region.id %}selected{% endif %}>
                            {{ region.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="site-filter" class="form-label">Site</label>
                <select id="site-filter" class="form-select sector-filter">
                    <option value="">Tous sites</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="button" id="reset-filters" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Vue liste -->
    <div id="sectors-list">
        <div id="sectors-container" class="row g-4">
            {% set sectorItems = sectors.getItems() %}
            
            {% if sectorItems|length > 0 %}
                {% for sector in sectorItems %}
                    <div class="col-md-6 col-lg-4">
                        <div class="sector-card card h-100" data-sector-id="{{ sector.id }}">
                            {% set image = sector.image ? url('/uploads/' ~ sector.image) : url('/images/placeholder-sector.jpg') %}
                            
                            {% if sector.image %}
                                <div class="sector-image">
                                    <img src="{{ image }}" alt="{{ sector.name }}" class="img-fluid">
                                </div>
                            {% endif %}
                            
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-1">
                                        <a href="{{ url('/sectors/' ~ sector.id) }}" class="text-decoration-none">{{ sector.name }}</a>
                                    </h5>
                                    <div class="sector-actions">
                                        <button class="btn btn-sm btn-outline-secondary quick-weather" 
                                                title="M√©t√©o" data-sector-id="{{ sector.id }}">
                                            <i class="fas fa-cloud-sun"></i>
                                        </button>
                                        {% if sector.coordinates_lat and sector.coordinates_lng %}
                                            <button class="btn btn-sm btn-outline-secondary quick-gps" 
                                                    title="Navigation GPS" data-sector-id="{{ sector.id }}">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </button>
                                        {% endif %}
                                        <button class="btn btn-sm btn-outline-secondary quick-favorite" 
                                                title="Favoris" data-sector-id="{{ sector.id }}">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="sector-meta text-muted small mb-2">
                                    {% if sector.region_name is defined %}
                                        <span class="me-2">üèîÔ∏è {{ sector.region_name }}</span>
                                    {% elseif sector.region %}
                                        <span class="me-2">üèîÔ∏è {{ sector.region.name }}</span>
                                    {% endif %}
                                    {% if sector.altitude %}
                                        <span class="me-2">‚õ∞Ô∏è {{ sector.altitude }}m</span>
                                    {% endif %}
                                </div>
                                
                                {% if sector.description %}
                                    <p class="card-text">{{ sector.description|slice(0, 100) ~ (sector.description|length > 100 ? '...' : '') }}</p>
                                {% endif %}
                                
                                <div class="sector-stats row text-center mt-3">
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">{{ sector.routes_count|default(0) }}</div>
                                        <div class="stat-label small text-muted">Voies</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">{{ sector.difficulty_range|default('N/A') }}</div>
                                        <div class="stat-label small text-muted">Difficult√©s</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">
                                            {% if sector.avg_beauty %}
                                                {{ '‚òÖ'|repeat(sector.avg_beauty|round) }}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </div>
                                        <div class="stat-label small text-muted">Beaut√©</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="empty-state text-center py-5">
                        <div class="empty-icon mb-3">
                            <i class="fas fa-mountain fa-3x text-muted"></i>
                        </div>
                        <h4 class="text-muted">Aucun secteur trouv√©</h4>
                        <p class="text-muted">Essayez de modifier vos crit√®res de recherche</p>
                        <button class="btn btn-outline-primary" id="reset-filters-fallback">
                            R√©initialiser les filtres
                        </button>
                    </div>
                </div>
            {% endif %}
        </div>
        
        <!-- Pagination temporairement simplifi√©e pour le test -->
        {% if sectorItems|length > 0 %}
            <div class="pagination-container mt-4">
                <div class="d-flex justify-content-center">
                    <div class="text-muted">
                        {{ sectors.getTotal() }} secteurs trouv√©s
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    
    <!-- Vue carte (cach√©e par d√©faut) -->
    <div id="sectors-map" class="d-none" style="height: 600px;"></div>
{% endblock %}

{% block scripts %}
<script>
// Exposer les donn√©es des secteurs pour les composants JavaScript modernes
window.sectorsData = {
    sectors: [
        {% for sector in sectorItems %}
        {
            id: {{ sector.id }},
            name: {{ sector.name|json_encode|raw }},
            description: {{ sector.description|default('')|json_encode|raw }},
            coordinates_lat: {{ sector.coordinates_lat|default('null') }},
            coordinates_lng: {{ sector.coordinates_lng|default('null') }},
            altitude: {{ sector.altitude|default('null') }},
            region_id: {{ sector.region_id|default('null') }},
            region_name: {{ (sector.region_name is defined ? sector.region_name : (sector.region ? sector.region.name : ''))|json_encode|raw }},
            site_id: {{ sector.site_id|default('null') }},
            routes_count: {{ sector.routes_count|default(0) }},
            difficulty_range: {{ sector.difficulty_range|default('')|json_encode|raw }},
            avg_beauty: {{ sector.avg_beauty|default('null') }},
            access_time: {{ sector.access_time|default('null') }}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    regions: [
        {% for region in regions %}
        {
            id: {{ region.id }},
            name: {{ region.name|json_encode|raw }}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    pagination: {
        currentPage: {{ sectors.getCurrentPage() }},
        totalPages: {{ sectors.getTotalPages() }},
        total: {{ sectors.getTotal() }},
        perPage: {{ sectors.getPerPage() }}
    }
};

// Fonction de tri legacy pour compatibilit√©
window.toggleSortDirection = function() {
    const currentUrl = new URL(window.location);
    const currentDir = currentUrl.searchParams.get('sort_dir') || 'ASC';
    const newDir = currentDir === 'ASC' ? 'DESC' : 'ASC';
    currentUrl.searchParams.set('sort_dir', newDir);
    window.location.href = currentUrl.toString();
};

// Reset filters fallback
document.addEventListener('DOMContentLoaded', function() {
    const resetBtn = document.getElementById('reset-filters-fallback');
    if (resetBtn) {
        resetBtn.addEventListener('click', function() {
            window.location.href = '{{ url('/sectors') }}';
        });
    }
});
</script>

<style>
.sector-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.sector-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.sector-card.elevated {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.sector-actions .btn {
    margin-left: 0.25rem;
}

.sector-actions .btn:first-child {
    margin-left: 0;
}

.sector-stats .stat-value {
    font-weight: 600;
    color: var(--bs-primary);
}

.sort-controls .form-select {
    min-width: 120px;
}

.results-info {
    font-size: 0.9rem;
}

.empty-state {
    background: #f8f9fa;
    border-radius: 0.5rem;
    border: 2px dashed #dee2e6;
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out both;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#map-view-toggle.active {
    background-color: var(--bs-primary);
    color: white;
}

.filters {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
}

@media (max-width: 768px) {
    .sector-actions {
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .sector-actions .btn {
        margin-left: 0;
        font-size: 0.75rem;
    }
}
</style>
{% endblock %}