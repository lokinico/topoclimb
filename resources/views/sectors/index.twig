        </div>
        
        <!-- Vue Liste -->
        <div class="sectors-list entities-list view-list" id="sectors-list">
            {% if sectors|length > 0 %}
                {% for sector in sectors %}
                    <div class="list-item d-flex align-items-center p-3 mb-2 bg-white rounded shadow-sm" data-sector-id="{{ sector.id }}">
