                                {% if sector.region_name %}
                                    <span class="me-2">üèîÔ∏è {{ sector.region_name }}</span>
                                {% endif %}
                                {% if sector.site_name %}
                                    <span class="me-2">üìç {{ sector.site_name }}</span>
