{% extends "layouts/app.twig" %}

{% block title %}Secteurs d'escalade - TopoclimbCH{% endblock %}

{% block body_class %}sectors-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ url('/css/pages-common.css') }}">
    <link rel="stylesheet" href="{{ url('/css/view-modes.css') }}">
{% endblock %}

{% block content %}
<div class="page-container">
    <!-- En-tête épuré -->
    <div class="page-header-clean">
        <div class="container">
            <div class="page-header-content">
                <div class="page-header-text">
                    <h1 class="page-title">
                        <i class="fas fa-mountain"></i>
                        Secteurs d'escalade
                    </h1>
                    <p class="page-subtitle">
                        Explorez les secteurs et leurs voies d'escalade
                    </p>
                </div>
                
                <!-- Bouton Create pour les admins -->
                {% if user and user.autorisation in ['0', '1', '2'] %}
                <div class="page-header-actions">
                    <a href="{{ url('/sectors/create') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i>
                        Nouveau secteur
                    </a>
                </div>
                {% endif %}
            </div>
            
            <!-- Statistiques simples -->
            <div class="page-stats">
                <span class="stat">
                    <strong>{{ sectors.getTotal() }}</strong> Secteurs
                </span>
                <span class="stat">
                    <strong>0</strong> Voies
                </span>
                <span class="stat">
                    <strong>0</strong> Sites
                </span>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="container">
        <!-- Filtres avancés unifiés -->
        {% include 'components/advanced-filters.twig' with {
            'entity': 'sectors',
            'currentFilters': {
                'region_id': currentRegionId|default(''),
                'search': '',
                'sort_by': sort_by|default('name'),
                'sort_dir': sort_dir|default('ASC')
            },
            'regions': regions|default([])
        } %}

        <!-- Barre d'outils avec contrôles de vue -->
        <div class="toolbar">
            <div class="results-info">
                <span class="text-muted">{{ sectors.getTotal() }} secteur(s) trouvé(s)</span>
            </div>
            
            <!-- Contrôles de vue -->
            <div class="view-controls">
                <div class="btn-group" role="group" aria-label="Mode d'affichage">
                    <button type="button" class="btn btn-outline-primary active" data-view="grid">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="list">
                        <i class="fas fa-list"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="compact">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Conteneur des vues -->
        <div class="sectors-container entities-container" id="sectors-container">
            <!-- Vue grille (cartes) -->
            <div class="sectors-grid entities-grid view-grid active" id="sectors-grid">
                {% set sectorItems = sectors.getItems() %}
                {% if sectorItems|length > 0 %}
                    {% for sector in sectorItems %}
                        <div class="sector-card entity-card" data-sector-id="{{ sector.id }}">
                            {% if sector.image %}
                                <div class="card-header">
                                    <img src="{{ url('/uploads/' ~ sector.image) }}" alt="{{ sector.name }}" class="img-fluid">
                                </div>
                            {% endif %}
                            
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="entity-title">{{ sector.name }}</h3>
                                </div>
                                
                                <div class="entity-meta">
                                    {% if sector.region_name is defined %}
                                        <span class="meta-item">
                                            <i class="fas fa-mountain"></i>
                                            {{ sector.region_name }}
                                        </span>
                                    {% elseif sector.region %}
                                        <span class="meta-item">
                                            <i class="fas fa-mountain"></i>
                                            {{ sector.region.name }}
                                        </span>
                                    {% endif %}
                                    {% if sector.altitude %}
                                        <span class="meta-item">
                                            <i class="fas fa-chart-line"></i>
                                            {{ sector.altitude }}m
                                        </span>
                                    {% endif %}
                                </div>
                                
                                {% if sector.description %}
                                    <p class="entity-description">{{ sector.description|slice(0, 100) }}{{ sector.description|length > 100 ? '...' : '' }}</p>
                                {% endif %}
                                
                                <div class="sector-stats row text-center mt-3">
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">{{ sector.routes_count|default(0) }}</div>
                                        <div class="stat-label small text-muted">Voies</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">{{ sector.difficulty_range|default('N/A') }}</div>
                                        <div class="stat-label small text-muted">Difficultés</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-value h6 mb-0">
                                            {% if sector.avg_beauty %}
                                                {{ '★'|repeat(sector.avg_beauty|round) }}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </div>
                                        <div class="stat-label small text-muted">Beauté</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-actions">
                                <a href="{{ url('/sectors/' ~ sector.id) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Voir
                                </a>
                                
                                <div class="quick-actions">
                                    <button class="btn-action" title="Météo" data-action="weather" data-id="{{ sector.id }}">
                                        <i class="fas fa-cloud-sun"></i>
                                    </button>
                                    {% if sector.coordinates_lat and sector.coordinates_lng %}
                                        <button class="btn-action" title="Navigation GPS" data-action="map" data-id="{{ sector.id }}">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </button>
                                    {% endif %}
                                    <button class="btn-action" title="Favoris" data-action="favorite" data-id="{{ sector.id }}">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="no-results">
                        <i class="fas fa-mountain"></i>
                        <h3>Aucun secteur trouvé</h3>
                        <p>Essayez de modifier vos critères de recherche.</p>
                    </div>
                {% endif %}
            </div>
            
            <!-- Vue liste -->
            <div class="sectors-list entities-list view-list" id="sectors-list">
                {% if sectorItems|length > 0 %}
                    {% for sector in sectorItems %}
                        <div class="sector-list-item entity-list-item" data-sector-id="{{ sector.id }}">
                            <div class="item-content">
                                <h4 class="item-title">{{ sector.name }}</h4>
                                <p class="item-subtitle">
                                    {% if sector.region_name is defined %}
                                        {{ sector.region_name }}
                                    {% elseif sector.region %}
                                        {{ sector.region.name }}
                                    {% endif %}
                                    {% if sector.altitude %} - {{ sector.altitude }}m{% endif %}
                                </p>
                                {% if sector.description %}
                                    <p class="item-description">{{ sector.description|slice(0, 150) }}...</p>
                                {% endif %}
                                <div class="item-meta">
                                    <span><i class="fas fa-route"></i> {{ sector.routes_count|default(0) }} voies</span>
                                    {% if sector.difficulty_range %}
                                        <span><i class="fas fa-chart-line"></i> {{ sector.difficulty_range }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="{{ url('/sectors/' ~ sector.id) }}" class="btn btn-primary">Voir</a>
                                <button class="btn btn-outline-secondary" title="Météo" data-action="weather" data-id="{{ sector.id }}">
                                    <i class="fas fa-cloud-sun"></i>
                                </button>
                                {% if sector.coordinates_lat and sector.coordinates_lng %}
                                    <button class="btn btn-outline-secondary" title="Carte" data-action="map" data-id="{{ sector.id }}">
                                        <i class="fas fa-map"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            <!-- Vue compacte -->
            <div class="sectors-compact entities-compact view-compact" id="sectors-compact">
                {% if sectorItems|length > 0 %}
                    {% for sector in sectorItems %}
                        <div class="sector-compact-item entity-compact-item" data-sector-id="{{ sector.id }}">
                            <div class="compact-name">
                                <a href="{{ url('/sectors/' ~ sector.id) }}">{{ sector.name }}</a>
                            </div>
                            <div class="compact-meta">
                                {% if sector.region_name is defined %}
                                    <span class="compact-region">{{ sector.region_name }}</span>
                                {% elseif sector.region %}
                                    <span class="compact-region">{{ sector.region.name }}</span>
                                {% endif %}
                                {% if sector.altitude %}
                                    <span class="compact-altitude">{{ sector.altitude }}m</span>
                                {% endif %}
                                <span class="compact-routes">{{ sector.routes_count|default(0) }} voies</span>
                            </div>
                            <div class="compact-actions">
                                <button title="Météo" data-action="weather" data-id="{{ sector.id }}"><i class="fas fa-cloud-sun"></i></button>
                                {% if sector.coordinates_lat and sector.coordinates_lng %}
                                    <button title="Carte" data-action="map" data-id="{{ sector.id }}"><i class="fas fa-map"></i></button>
                                {% endif %}
                                <button title="Favoris" data-action="favorite" data-id="{{ sector.id }}"><i class="fas fa-heart"></i></button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <!-- Pagination temporaire simplifiée -->
        {% if sectorItems|length > 0 %}
            <nav aria-label="Navigation des pages" class="pagination-nav">
                <div class="d-flex justify-content-center">
                    <div class="text-muted">
                        {{ sectors.getTotal() }} secteurs trouvés
                    </div>
                </div>
            </nav>
        {% endif %}
    </div>
</div>

<script src="{{ url('/js/pages-common.js') }}"></script>
<script src="{{ url('/js/view-manager.js') }}"></script>
{% endblock %}