{% extends 'layouts/app.twig' %}

{% block title %}Réinitialisation du mot de passe - TopoclimbCH{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Définir un nouveau mot de passe</div>
                <div class="card-body">
                    {% include 'partials/flash.twig' %}
                    
                    <form method="POST" action="/reset-password">
                        <input type="hidden" name="_csrf" value="{{ csrf_token }}">
                        <input type="hidden" name="token" value="{{ token }}">
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Nouveau mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" required autocomplete="new-password">
                            {% if errors.password %}
                                <div class="text-danger">{{ errors.password[0] }}</div>
                            {% endif %}
                            <div class="form-text">Le mot de passe doit contenir au moins 8 caractères.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password_confirmation" class="form-label">Confirmer le mot de passe</label>
                            <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" required autocomplete="new-password">
                            {% if errors.password_confirmation %}
                                <div class="text-danger">{{ errors.password_confirmation[0] }}</div>
                            {% endif %}
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
