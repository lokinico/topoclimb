{% extends "layouts/app.twig" %}

{% block title %}Permissions insuffisantes - TopoclimbCH{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center py-5">
                <!-- Icône d'erreur -->
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-warning"></i>
                </div>
                
                <!-- Titre principal -->
                <h1 class="display-4 fw-bold text-dark mb-3">Accès refusé</h1>
                
                <!-- Message d'erreur -->
                <div class="alert alert-warning border-0 shadow-sm mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle text-warning me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Permissions insuffisantes</h5>
                            <p class="mb-0">
                                {{ error_message|default('Vous n\'avez pas les permissions nécessaires pour accéder à cette page.') }}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Informations utilisateur -->
                {% if auth_user %}
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="card-title text-muted mb-2">
                            <i class="fas fa-user me-2"></i>Informations de connexion
                        </h6>
                        <p class="card-text">
                            <strong>Utilisateur :</strong> {{ auth_user.username }}<br>
                            <strong>Niveau d'autorisation :</strong> 
                            <span class="badge bg-secondary">{{ auth_user.autorisation }}</span>
                        </p>
                    </div>
                </div>
                {% endif %}

                <!-- Actions -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button onclick="history.back()" class="btn btn-outline-primary btn-lg me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </button>
                    <a href="{{ url('/') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Accueil
                    </a>
                    {% if not auth_user %}
                    <a href="{{ url('/login') }}" class="btn btn-success btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </a>
                    {% endif %}
                </div>

                <!-- Informations supplémentaires -->
                <div class="mt-5">
                    <details class="text-start">
                        <summary class="btn btn-link text-muted p-0">
                            <small><i class="fas fa-info-circle me-1"></i>Plus d'informations</small>
                        </summary>
                        <div class="mt-3 p-3 bg-light rounded">
                            <h6 class="text-dark">Niveaux d'autorisation :</h6>
                            <ul class="list-unstyled small text-muted mb-0">
                                <li><span class="badge bg-danger me-2">0</span>Administrateur - Accès total</li>
                                <li><span class="badge bg-warning me-2">1</span>Modérateur - Gestion contenu</li>
                                <li><span class="badge bg-info me-2">2</span>Contributeur - Ajout contenu</li>
                                <li><span class="badge bg-secondary me-2">3+</span>Utilisateur - Consultation</li>
                            </ul>
                        </div>
                    </details>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.fa-lock {
    opacity: 0.8;
}

details summary {
    cursor: pointer;
    outline: none;
}

details summary::-webkit-details-marker {
    display: none;
}

details[open] summary::before {
    content: "▼ ";
}

details summary::before {
    content: "▶ ";
}

.alert {
    border-left: 4px solid #ffc107;
}
</style>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-focus sur le bouton retour après 1 seconde
    setTimeout(() => {
        const backButton = document.querySelector('button[onclick="history.back()"]');
        if (backButton) {
            backButton.focus();
        }
    }, 1000);
});
</script>
{% endblock %}