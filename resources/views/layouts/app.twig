<!DOCTYPE html>
<html lang="{{ app_locale|default('fr') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block description %}TopoclimbCH - Base de données des sites d'escalade en Suisse{% endblock %}">
    <meta name="keywords" content="{% block keywords %}escalade, grimpe, topo, suisse, voies, secteurs{% endblock %}">
    
    <title>{% block title %}TopoclimbCH{% endblock %}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ asset('images/apple-touch-icon.png') }}">
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    
    <!-- Styles spécifiques aux pages -->
    {% block styles %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="{{ url('/') }}">
                <i class="fas fa-mountain me-2"></i>TopoclimbCH
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link {{ is_active('/') ? 'active' : '' }}" href="{{ url('/') }}">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ is_active('/regions') ? 'active' : '' }}" href="{{ url('/regions') }}">
                            <i class="fas fa-map me-1"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ is_active('/sites') ? 'active' : '' }}" href="{{ url('/sites') }}">
                            <i class="fas fa-book me-1"></i>Sites
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ is_active('/sectors') ? 'active' : '' }}" href="{{ url('/sectors') }}">
                            <i class="fas fa-location-dot me-1"></i>Secteurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ is_active('/routes') ? 'active' : '' }}" href="{{ url('/routes') }}">
                            <i class="fas fa-route me-1"></i>Voies
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    {% if auth() %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                {{ auth_user().prenom }} {{ auth_user().nom }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="{{ url('/profile') }}">
                                        <i class="fas fa-user me-2"></i>Mon profil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ url('/ascents') }}">
                                        <i class="fas fa-chart-line me-2"></i>Mes ascensions
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ url('/settings') }}">
                                        <i class="fas fa-cog me-2"></i>Paramètres
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="{{ url('/logout') }}">
                                        <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ is_active('/login') ? 'active' : '' }}" href="{{ url('/login') }}">
                                <i class="fas fa-sign-in-alt me-1"></i>Connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ is_active('/register') ? 'active' : '' }}" href="{{ url('/register') }}">
                                <i class="fas fa-user-plus me-1"></i>Inscription
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Contenu principal -->
    <main class="flex-grow-1">
        {% block breadcrumb %}{% endblock %}
        
        <div class="container py-4">
            {% include 'partials/flash.twig' %}
            {% block content %}{% endblock %}
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="py-5 bg-dark text-light mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">
                        <i class="fas fa-mountain me-2"></i>TopoclimbCH
                    </h5>
                    <p class="text-muted">
                        La référence pour les sites d'escalade en Suisse. 
                        Découvrez, partagez et grimpez !
                    </p>
                    <div class="social-links mt-3">
                        <a href="#" class="text-muted me-3" title="Facebook">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a href="#" class="text-muted me-3" title="Instagram">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="#" class="text-muted" title="YouTube">
                            <i class="fab fa-youtube fa-lg"></i>
                        </a>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="{{ url('/about') }}" class="text-muted text-decoration-none">
                                <i class="fas fa-angle-right me-1"></i>À propos
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="{{ url('/contact') }}" class="text-muted text-decoration-none">
                                <i class="fas fa-angle-right me-1"></i>Contact
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="{{ url('/privacy') }}" class="text-muted text-decoration-none">
                                <i class="fas fa-angle-right me-1"></i>Confidentialité
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="{{ url('/terms') }}" class="text-muted text-decoration-none">
                                <i class="fas fa-angle-right me-1"></i>Conditions d'utilisation
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Newsletter</h5>
                    <p class="text-muted">
                        Restez informé des nouveaux sites et fonctionnalités
                    </p>
                    <form class="mt-3" method="post" action="{{ url('/newsletter') }}">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Votre email" name="email" required>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <hr class="my-4 border-secondary">
            
            <div class="text-center text-muted">
                <p class="mb-0">
                    &copy; {{ "now"|date("Y") }} TopoclimbCH. Tous droits réservés.
                    <br>
                    <small>Développé avec <i class="fas fa-heart text-danger"></i> en Suisse</small>
                </p>
            </div>
        </div>
    </footer>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/app.js') }}"></script>
    
    <!-- Scripts additionnels -->
    {% block scripts %}{% endblock %}
</body>
</html>