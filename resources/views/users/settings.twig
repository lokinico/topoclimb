{% extends "layouts/app.twig" %}

{% block title %}Paramètres - TopoclimbCH{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="page-header">
        <h1>Paramètres du compte</h1>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item active" data-target="profile-settings">Profil</a>
                        <a href="#" class="list-group-item" data-target="security-settings">Sécurité</a>
                        <a href="#" class="list-group-item" data-target="privacy-settings">Confidentialité</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <!-- Section Profil -->
            <div class="settings-section active" id="profile-settings">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Modifier mon profil</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ url('/settings/profile') }}">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="prenom" class="form-label">Prénom</label>
                                    <input type="text" class="form-control" id="prenom" name="prenom" value="{{ auth_user().prenom }}" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="nom" class="form-label">Nom</label>
                                    <input type="text" class="form-control" id="nom" name="nom" value="{{ auth_user().nom }}" required>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="username" class="form-label">Nom d'utilisateur</label>
                                <input type="text" class="form-control" id="username" name="username" value="{{ auth_user().username }}" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="{{ auth_user().mail }}" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="ville" class="form-label">Ville</label>
                                <input type="text" class="form-control" id="ville" name="ville" value="{{ auth_user().ville }}">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Section Sécurité -->
            <div class="settings-section" id="security-settings" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Modifier mon mot de passe</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ url('/settings/password') }}">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            
                            <div class="mb-3">
                                <label for="current_password" class="form-label">Mot de passe actuel</label>
                                <input type="password" class="form-control" id="current_password" name="current_password" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="new_password" class="form-label">Nouveau mot de passe</label>
                                <input type="password" class="form-control" id="new_password" name="new_password" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="new_password_confirmation" class="form-label">Confirmer le nouveau mot de passe</label>
                                <input type="password" class="form-control" id="new_password_confirmation" name="new_password_confirmation" required>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Section Confidentialité -->
            <div class="settings-section" id="privacy-settings" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Paramètres de confidentialité</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ url('/settings/privacy') }}">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            
                            <div class="mb-3">
                                <label class="form-label">Qui peut voir mon profil</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="profile_visibility" id="profile_public" value="public" checked>
                                    <label class="form-check-label" for="profile_public">Tout le monde</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="profile_visibility" id="profile_members" value="members">
                                    <label class="form-check-label" for="profile_members">Membres uniquement</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="profile_visibility" id="profile_private" value="private">
                                    <label class="form-check-label" for="profile_private">Privé (moi uniquement)</label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Qui peut voir mes ascensions</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_public" value="public" checked>
                                    <label class="form-check-label" for="ascents_public">Tout le monde</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_members" value="members">
                                    <label class="form-check-label" for="ascents_members">Membres uniquement</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_private" value="private">
                                    <label class="form-check-label" for="ascents_private">Privé (moi uniquement)</label>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gestion des onglets
        const tabLinks = document.querySelectorAll('.list-group-item');
        
        tabLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Cacher toutes les sections
                document.querySelectorAll('.settings-section').forEach(section => {
                    section.style.display = 'none';
                });
                
                // Désactiver tous les liens
                tabLinks.forEach(l => {
                    l.classList.remove('active');
                });
                
                // Activer le lien cliqué
                this.classList.add('active');
                
                // Afficher la section correspondante
                const targetId = this.getAttribute('data-target');
                const targetSection = document.getElementById(targetId);
                if (targetSection) {
                    targetSection.style.display = 'block';
                }
            });
        });
    });
</script>
{% endblock %}