{% extends "layouts/app.twig" %}

{% block title %}Paramètres du compte - TopoclimbCH{% endblock %}

{% block content %}
<div class="container py-4">
    <h1 class="mb-4">Paramètres du compte</h1>
    
    <div class="row">
        <div class="col-md-3">
            <div class="list-group mb-4">
                <a href="#account" class="list-group-item list-group-item-action active" data-bs-toggle="list">Compte</a>
                <a href="#security" class="list-group-item list-group-item-action" data-bs-toggle="list">Sécurité</a>
                <a href="#notifications" class="list-group-item list-group-item-action" data-bs-toggle="list">Notifications</a>
                <a href="#privacy" class="list-group-item list-group-item-action" data-bs-toggle="list">Confidentialité</a>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="tab-content">
                <!-- Section Compte -->
                <div class="tab-pane fade show active" id="account">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="h5 mb-0">Informations du compte</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ url('/settings/account') }}">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Adresse email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="{{ auth_user().mail }}" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="username" class="form-label">Nom d'utilisateur</label>
                                        <input type="text" class="form-control" id="username" name="username" value="{{ auth_user().username }}" required>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="prenom" class="form-label">Prénom</label>
                                        <input type="text" class="form-control" id="prenom" name="prenom" value="{{ auth_user().prenom }}" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="nom" class="form-label">Nom</label>
                                        <input type="text" class="form-control" id="nom" name="nom" value="{{ auth_user().nom }}" required>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="ville" class="form-label">Ville</label>
                                    <input type="text" class="form-control" id="ville" name="ville" value="{{ auth_user().ville }}">
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Section Sécurité -->
                <div class="tab-pane fade" id="security">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="h5 mb-0">Modifier le mot de passe</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ url('/settings/password') }}">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                
                                <div class="mb-3">
                                    <label for="current_password" class="form-label">Mot de passe actuel</label>
                                    <input type="password" class="form-control" id="current_password" name="current_password" required>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="password" class="form-label">Nouveau mot de passe</label>
                                    <input type="password" class="form-control" id="password" name="password" required>
                                    <div class="form-text">Le mot de passe doit contenir au moins 8 caractères.</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="password_confirmation" class="form-label">Confirmer le nouveau mot de passe</label>
                                    <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" required>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Section Notifications -->
                <div class="tab-pane fade" id="notifications">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="h5 mb-0">Préférences de notification</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ url('/settings/notifications') }}">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="email_notifications" name="email_notifications" value="1" {% if email_notifications %}checked{% endif %}>
                                    <label class="form-check-label" for="email_notifications">Recevoir des notifications par email</label>
                                </div>
                                
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="notify_comments" name="notify_comments" value="1" {% if notify_comments %}checked{% endif %}>
                                    <label class="form-check-label" for="notify_comments">Commentaires sur mes voies</label>
                                </div>
                                
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="notify_events" name="notify_events" value="1" {% if notify_events %}checked{% endif %}>
                                    <label class="form-check-label" for="notify_events">Événements d'escalade près de chez moi</label>
                                </div>
                                
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="notify_updates" name="notify_updates" value="1" {% if notify_updates %}checked{% endif %}>
                                    <label class="form-check-label" for="notify_updates">Mises à jour des secteurs que je suis</label>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Enregistrer les préférences</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Section Confidentialité -->
                <div class="tab-pane fade" id="privacy">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="h5 mb-0">Paramètres de confidentialité</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ url('/settings/privacy') }}">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                
                                <div class="mb-3">
                                    <label class="form-label">Qui peut voir mon profil</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="profile_visibility" id="profile_public" value="public" {% if profile_visibility == 'public' %}checked{% endif %}>
                                        <label class="form-check-label" for="profile_public">
                                            Public - Tout le monde peut voir mon profil
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="profile_visibility" id="profile_users" value="users" {% if profile_visibility == 'users' %}checked{% endif %}>
                                        <label class="form-check-label" for="profile_users">
                                            Utilisateurs - Seulement les utilisateurs inscrits
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="profile_visibility" id="profile_private" value="private" {% if profile_visibility == 'private' %}checked{% endif %}>
                                        <label class="form-check-label" for="profile_private">
                                            Privé - Seulement moi
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Qui peut voir mes ascensions</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_public" value="public" {% if ascents_visibility == 'public' %}checked{% endif %}>
                                        <label class="form-check-label" for="ascents_public">
                                            Public - Tout le monde peut voir mes ascensions
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_users" value="users" {% if ascents_visibility == 'users' %}checked{% endif %}>
                                        <label class="form-check-label" for="ascents_users">
                                            Utilisateurs - Seulement les utilisateurs inscrits
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="ascents_visibility" id="ascents_private" value="private" {% if ascents_visibility == 'private' %}checked{% endif %}>
                                        <label class="form-check-label" for="ascents_private">
                                            Privé - Seulement moi
                                        </label>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Enregistrer les paramètres</button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="card mt-4">
                        <div class="card-header bg-danger text-white">
                            <h2 class="h5 mb-0">Zone de danger</h2>
                        </div>
                        <div class="card-body">
                            <p>La suppression de votre compte est irréversible et entraînera la perte de toutes vos données.</p>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                Supprimer mon compte
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour la suppression de compte -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.</p>
                <form method="post" action="{{ url('/settings/delete-account') }}" id="deleteAccountForm">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    <div class="mb-3">
                        <label for="password_confirm" class="form-label">Entrez votre mot de passe pour confirmer</label>
                        <input type="password" class="form-control" id="password_confirm" name="password_confirm" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" form="deleteAccountForm" class="btn btn-danger">Supprimer définitivement</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gestion des onglets simple si Bootstrap n'est pas chargé
        const tabLinks = document.querySelectorAll('.list-group-item');
        const tabContents = document.querySelectorAll('.tab-pane');
        
        tabLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Désactiver tous les liens et cacher tous les contenus
                tabLinks.forEach(l => l.classList.remove('active'));
                tabContents.forEach(c => {
                    c.classList.remove('show');
                    c.classList.remove('active');
                });
                
                // Activer le lien cliqué
                this.classList.add('active');
                
                // Afficher le contenu correspondant
                const targetId = this.getAttribute('href').substring(1);
                const targetContent = document.getElementById(targetId);
                if (targetContent) {
                    targetContent.classList.add('show');
                    targetContent.classList.add('active');
                }
            });
        });
    });
</script>
{% endblock %}