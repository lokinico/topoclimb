{% extends "layouts/app.twig" %}

{% import "components/pagination.twig" as pagination %}

{% block body_class %} books-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="/css/pages-common.css">
    <link rel="stylesheet" href="/css/view-modes.css">
    <link rel="stylesheet" href="/css/pagination.css">
{% endblock %}

{% block title %}Guides et topos d'escalade - TopoclimbCH{% endblock %}

{% block content %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Guides et topos d'escalade</h1>
            
            <div class="actions">
                {% if user and user.autorisation in ['0', '1', '2'] %}
                    <a href="/books/create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Ajouter un guide
                    </a>
                {% endif %}
            </div>
        </div>
        
        <!-- Controls d'affichage et statistiques -->
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
            <div class="results-info">
                <span class="text-muted">{{ books|length }} guide(s) trouv√©(s)</span>
                {% if stats %}
                    <span class="text-muted ms-3">
                        Total: {{ stats.total_books ?? 0 }} guides
                        {% if stats.avg_price %} | Prix moy.: {{ stats.avg_price }}‚Ç¨{% endif %}
                    </span>
                {% endif %}
            </div>
            
            <!-- Controls d'affichage -->
            <div class="view-controls">
                <div class="btn-group" role="group" aria-label="Mode d'affichage">
                    <button type="button" class="btn btn-outline-primary active" data-view="grid">
                        <i class="fas fa-th"></i> Cartes
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="list">
                        <i class="fas fa-list"></i> Liste
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="compact">
                        <i class="fas fa-bars"></i> Compact
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filtres sp√©cialis√©s pour les guides -->
    <div class="filters mb-4">
        <form method="GET" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label for="author" class="form-label">Auteur</label>
                <input type="text" name="author" id="author" class="form-control" 
                       placeholder="Nom d'auteur" value="{{ filters.author ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <label for="publisher" class="form-label">√âditeur</label>
                <input type="text" name="publisher" id="publisher" class="form-control" 
                       placeholder="Nom d'√©diteur" value="{{ filters.publisher ?? '' }}">
            </div>
            
            <div class="col-md-1">
                <label for="year_min" class="form-label">Ann√©e min</label>
                <input type="number" name="year_min" id="year_min" class="form-control" 
                       placeholder="1990" min="1900" max="2030" value="{{ filters.year_min ?? '' }}">
            </div>
            
            <div class="col-md-1">
                <label for="year_max" class="form-label">Ann√©e max</label>
                <input type="number" name="year_max" id="year_max" class="form-control" 
                       placeholder="2025" min="1900" max="2030" value="{{ filters.year_max ?? '' }}">
            </div>
            
            <div class="col-md-1">
                <label for="price_min" class="form-label">Prix min ‚Ç¨</label>
                <input type="number" name="price_min" id="price_min" class="form-control" 
                       placeholder="10" min="0" step="0.01" value="{{ filters.price_min ?? '' }}">
            </div>
            
            <div class="col-md-1">
                <label for="price_max" class="form-label">Prix max ‚Ç¨</label>
                <input type="number" name="price_max" id="price_max" class="form-control" 
                       placeholder="100" min="0" step="0.01" value="{{ filters.price_max ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <label for="search" class="form-label">Rechercher</label>
                <input type="search" name="search" id="search" class="form-control" 
                       placeholder="Titre, auteur..." value="{{ filters.search ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Filtrer
                </button>
            </div>
            
            <!-- Conserver les param√®tres de pagination -->
            {% if filters.per_page %}
                <input type="hidden" name="per_page" value="{{ filters.per_page }}">
            {% endif %}
        </form>
    </div>
    
    <!-- Conteneur principal -->
    <div class="books-container entities-container" id="books-container">
        <!-- Vue grille (cartes) -->
        <div class="books-grid entities-grid view-grid active" id="books-grid">
            {% if books|length > 0 %}
                {% for book in books %}
                    <div class="book-card entity-card card h-100" data-book-id="{{ book.id }}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-1">
                                    <a href="/books/{{ book.id }}" class="text-decoration-none">{{ book.title }}</a>
                                </h5>
                                <div class="book-actions">
                                    <button class="btn btn-sm btn-outline-secondary" 
                                            title="Favoris" data-action="favorite" data-id="{{ book.id }}">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                                    
                                    <div class="book-meta text-muted small mb-2">
                                        {% if book.author %}
                                            <span class="me-2">‚úçÔ∏è {{ book.author }}</span>
                                        {% endif %}
                                        {% if book.publication_year %}
                                            <span class="me-2">üìÖ {{ book.publication_year }}</span>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="book-details text-muted small mb-2">
                                        {% if book.publisher %}
                                            <span class="me-2">üè¢ {{ book.publisher }}</span>
                                        {% endif %}
                                        {% if book.isbn %}
                                            <span class="me-2">üìö ISBN: {{ book.isbn }}</span>
                                        {% endif %}
                                    </div>
                                    
                                    {% if book.description %}
                                        <p class="card-text">{{ book.description|slice(0, 150) ~ (book.description|length > 150 ? '...' : '') }}</p>
                                    {% endif %}
                                    
                                    <div class="book-stats mt-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                {% if book.created_at %}
                                                    Ajout√© {{ book.created_at|date('d/m/Y') }}
                                                {% endif %}
                                            </small>
                                            {% if book.price %}
                                                <span class="badge bg-success fs-6">
                                                    {{ book.price }}‚Ç¨
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-book fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucun guide trouv√©</h4>
                    <p class="text-muted">
                        {% if error %}
                            {{ error }}
                        {% else %}
                            La base de donn√©es ne contient pas encore de guides d'escalade.
                        {% endif %}
                    </p>
                    <a href="/books" class="btn btn-outline-primary">
                        R√©initialiser les filtres
                    </a>
                </div>
            {% endif %}
        </div>
        
        <!-- Vue Liste -->
        <div class="books-list entities-list view-list" id="books-list">
            {% if books|length > 0 %}
                {% for book in books %}
                    <div class="list-item d-flex align-items-center p-3 mb-2 bg-white rounded shadow-sm" data-book-id="{{ book.id }}">
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-start justify-content-between mb-1">
                                <h5 class="mb-0">
                                    <a href="/books/{{ book.id }}" class="text-decoration-none">{{ book.title }}</a>
                                </h5>
                                {% if book.price %}
                                    <span class="badge bg-success">{{ book.price }}‚Ç¨</span>
                                {% endif %}
                            </div>
                            
                            <div class="text-muted small mb-1">
                                {% if book.author %}
                                    ‚úçÔ∏è {{ book.author }}
                                {% endif %}
                                {% if book.publisher %}
                                    - üè¢ {{ book.publisher }}
                                {% endif %}
                                {% if book.publication_year %} - üìÖ {{ book.publication_year }}{% endif %}
                            </div>
                            
                            {% if book.description %}
                                <p class="mb-1 text-muted">{{ book.description|slice(0, 200) }}{{ book.description|length > 200 ? '...' : '' }}</p>
                            {% endif %}
                        </div>
                        
                        <div class="ms-3">
                            <button class="btn btn-sm btn-outline-secondary" title="Favoris" data-action="favorite" data-id="{{ book.id }}">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-book fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucun guide trouv√©</h4>
                    <p class="text-muted">La base de donn√©es ne contient pas encore de guides.</p>
                </div>
            {% endif %}
        </div>
        
        <!-- Vue Compacte -->
        <div class="books-compact entities-compact view-compact" id="books-compact">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>√âditeur</th>
                            <th>Ann√©e</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if books|length > 0 %}
                            {% for book in books %}
                                <tr data-book-id="{{ book.id }}">
                                    <td>
                                        <a href="/books/{{ book.id }}" class="text-decoration-none fw-medium">{{ book.title }}</a>
                                    </td>
                                    <td class="text-muted">{{ book.author|default('-') }}</td>
                                    <td class="text-muted">{{ book.publisher|default('-') }}</td>
                                    <td class="text-muted">{{ book.publication_year|default('-') }}</td>
                                    <td>
                                        {% if book.price %}
                                            <span class="badge bg-success">{{ book.price }}‚Ç¨</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-secondary" title="Favoris" data-action="favorite" data-id="{{ book.id }}">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-book fa-2x text-muted mb-2"></i>
                                        <div class="text-muted">Aucun guide trouv√©</div>
                                    </div>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    {% if paginator %}
        {{ pagination.renderWithSelector(paginator, filters) }}
    {% endif %}
{% endblock %}

{% block scripts %}
<script src="/js/pagination.js"></script>
<script>
// JavaScript pour la gestion des vues et des actions
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des onglets de vue
    const viewButtons = document.querySelectorAll('[data-view]');
    const viewContainers = document.querySelectorAll('.view-grid, .view-list, .view-compact');
    
    viewButtons.forEach(button => {
        button.addEventListener('click', function() {
            const targetView = this.getAttribute('data-view');
            
            // Mettre √† jour les boutons
            viewButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Mettre √† jour les vues
            viewContainers.forEach(container => {
                container.classList.remove('active');
                if (container.classList.contains('view-' + targetView)) {
                    container.classList.add('active');
                }
            });
        });
    });
    
    // Actions des guides
    document.addEventListener('click', function(e) {
        if (e.target.closest('[data-action]')) {
            const button = e.target.closest('[data-action]');
            const action = button.getAttribute('data-action');
            const bookId = button.getAttribute('data-id');
            
            switch(action) {
                case 'favorite':
                    alert('Fonctionnalit√© favoris √† impl√©menter pour le guide ' + bookId);
                    break;
            }
        }
    });
    
    // Validation des prix en temps r√©el
    const priceInputs = document.querySelectorAll('input[name^="price_"]');
    priceInputs.forEach(input => {
        input.addEventListener('input', function() {
            const value = parseFloat(this.value);
            if (value < 0) {
                this.value = '';
            }
        });
    });
    
    // Validation des ann√©es
    const yearInputs = document.querySelectorAll('input[name^="year_"]');
    yearInputs.forEach(input => {
        input.addEventListener('input', function() {
            const value = parseInt(this.value);
            if (value < 1900 || value > 2030) {
                this.setCustomValidity('Ann√©e doit √™tre entre 1900 et 2030');
            } else {
                this.setCustomValidity('');
            }
        });
    });
});
</script>

<style>
.book-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

