{% extends "layouts/app.twig" %}

{% block title %}{{ page_title }} - TopoclimbCH{% endblock %}

{% block content %}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-cloud-sun me-2"></i>{{ page_title }}</h1>
        <div class="text-muted">
            <i class="fas fa-clock me-1"></i>
            Mis à jour: {{ "now"|date("H:i") }}
        </div>
    </div>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Conditions météorologiques</strong> pour les principales régions d'escalade en Suisse.
        Données à titre indicatif - vérifiez toujours les conditions locales avant de partir.
    </div>
    
    <div class="row g-4">
        {% for region in weather_regions %}
        <div class="col-md-6 col-lg-4">
            <div class="card weather-card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">{{ region.name }}</h5>
                    <span class="badge bg-primary">{{ region.source|default('Données simulées') }}</span>
                </div>
                <div class="card-body text-center">
                    <div class="weather-icon mb-3">
                        <i class="fas fa-{{ region.condition == '01d' ? 'sun' : 'cloud' }} fa-3x text-warning"></i>
                    </div>
                    
                    <div class="temperature-display mb-3">
                        <span class="display-4 fw-bold">{{ region.temperature|default(15) }}°</span>
                        <small class="text-muted">C</small>
                    </div>
                    
                    <p class="weather-description mb-3">
                        {{ region.description|default('Conditions variables') }}
                    </p>
                    
                    <div class="row text-center small">
                        <div class="col-6">
                            <i class="fas fa-tint text-info"></i><br>
                            <strong>{{ region.humidity|default(60) }}%</strong><br>
                            <span class="text-muted">Humidité</span>
                        </div>
                        <div class="col-6">
                            <i class="fas fa-wind text-secondary"></i><br>
                            <strong>{{ region.wind_speed|default(10) }} km/h</strong><br>
                            <span class="text-muted">Vent</span>
                        </div>
                    </div>
                    
                    {% if region.climbing_conditions %}
                    <div class="climbing-conditions mt-3 p-2 bg-light rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small">Conditions escalade:</span>
                            <span class="badge bg-{{ region.climbing_conditions.score > 70 ? 'success' : (region.climbing_conditions.score > 40 ? 'warning' : 'danger') }}">
                                {{ region.climbing_conditions.rating|title }}
                            </span>
                        </div>
                        <div class="progress mt-1" style="height: 4px;">
                            <div class="progress-bar bg-{{ region.climbing_conditions.score > 70 ? 'success' : (region.climbing_conditions.score > 40 ? 'warning' : 'danger') }}" 
                                 style="width: {{ region.climbing_conditions.score }}%"></div>
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <a href="{{ url('/weather/regions/' ~ region.id|default(1)) }}" class="btn btn-outline-primary btn-sm w-100">
                        <i class="fas fa-map-marked-alt me-1"></i>
                        Détails région
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Conseils météo pour l'escalade</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-thermometer-half text-warning me-2"></i>Température</h6>
                            <ul class="small">
                                <li><strong>5-15°C:</strong> Idéal pour l'escalade technique</li>
                                <li><strong>15-25°C:</strong> Conditions parfaites</li>
                                <li><strong>>25°C:</strong> Prévoir de l'eau, éviter les expositions sud</li>
                                <li><strong><5°C:</strong> Gants et échauffement prolongé nécessaires</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-wind text-info me-2"></i>Vent & Humidité</h6>
                            <ul class="small">
                                <li><strong>Vent <15 km/h:</strong> Conditions optimales</li>
                                <li><strong>Vent >25 km/h:</strong> Éviter les voies exposées</li>
                                <li><strong>Humidité <70%:</strong> Adhérence normale</li>
                                <li><strong>Humidité >80%:</strong> Rocher potentiellement glissant</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.weather-card {
    transition: transform 0.2s;
}

.weather-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.temperature-display {
    font-weight: 300;
}

.weather-description {
    font-style: italic;
    color: #6c757d;
}

.climbing-conditions .progress {
    background-color: #e9ecef;
}
</style>
{% endblock %}