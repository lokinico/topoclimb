{% extends "layouts/app.twig" %}

{% block title %}Régions d'escalade en Suisse - TopoclimbCH{% endblock %}

{% block body_class %}regions-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ url('/css/pages-common.css') }}">
    <link rel="stylesheet" href="{{ url('/css/view-modes.css') }}">
{% endblock %}

{% block content %}
<div class="page-container">
    <!-- En-tête épuré -->
    <div class="page-header-clean">
        <div class="container">
            <div class="page-header-content">
                <div class="page-header-text">
                    <h1 class="page-title">
                        <i class="fas fa-mountain"></i>
                        Régions d'escalade
                    </h1>
                    <p class="page-subtitle">
                        Découvrez les plus beaux sites d'escalade de Suisse
                    </p>
                </div>
                
                <!-- Bouton Create pour les admins -->
                {% if user and user.autorisation in ['0', '1', '2'] %}
                <div class="page-header-actions">
                    <a href="/regions/create" class="btn btn-success">
                        <i class="fas fa-plus"></i>
                        Nouvelle région
                    </a>
                </div>
                {% endif %}
            </div>
            
            <!-- Statistiques simples -->
            <div class="page-stats">
                <span class="stat">
                    <strong>{{ regions|length }}</strong> Régions
                </span>
                <span class="stat">
                    <strong>{{ stats.total_sectors|default(0) }}</strong> Secteurs
                </span>
                <span class="stat">
                    <strong>{{ stats.total_routes|default(0) }}</strong> Voies
                </span>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="container">
        <!-- Filtres avancés unifiés -->
        {% include 'components/advanced-filters.twig' with {
            'entity': 'regions',
            'currentFilters': filters|default({}),
            'countries': countries|default([])
        } %}

        <!-- Barre d'outils avec contrôles de vue -->
        <div class="toolbar">
            <div class="results-info">
                <span class="text-muted">
                    {% if pagination is defined %}
                        {{ pagination.total }} région(s) trouvée(s)
                    {% else %}
                        {{ regions|length }} région(s) trouvée(s)
                    {% endif %}
                </span>
            </div>
            
            <!-- Contrôles de vue -->
            <div class="view-controls">
                <div class="btn-group" role="group" aria-label="Mode d'affichage">
                    <button type="button" class="btn btn-outline-primary active" data-view="grid">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="list">
                        <i class="fas fa-list"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="compact">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Conteneur des vues -->
        <div class="regions-container entities-container" id="regions-container">
            <!-- Vue grille (cartes) -->
            <div class="regions-grid entities-grid view-grid active" id="regions-grid">
                {% if regions is defined and regions|length > 0 %}
                    {% for region in regions %}
                        <div class="region-card entity-card" data-region-id="{{ region.id }}">
                            <div class="card-header">
                                <h3 class="entity-title">{{ region.name }}</h3>
                                <span class="entity-badge">{{ region.country_name|default('Suisse') }}</span>
                            </div>
                            
                            <div class="card-body">
                                {% if region.description %}
                                    <p class="entity-description">{{ region.description|slice(0, 120) }}{{ region.description|length > 120 ? '...' : '' }}</p>
                                {% endif %}
                                
                                <div class="entity-meta">
                                    {% if region.altitude %}
                                        <span class="meta-item">
                                            <i class="fas fa-mountain"></i>
                                            {{ region.altitude }}m
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="card-actions">
                                <a href="/regions/{{ region.id }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Voir
                                </a>
                                
                                <div class="quick-actions">
                                    <button class="btn-action" title="Météo" data-action="weather" data-id="{{ region.id }}">
                                        <i class="fas fa-cloud-sun"></i>
                                    </button>
                                    <button class="btn-action" title="Carte" data-action="map" data-id="{{ region.id }}">
                                        <i class="fas fa-map"></i>
                                    </button>
                                    <button class="btn-action" title="Favoris" data-action="favorite" data-id="{{ region.id }}">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                                
                                <!-- Actions admin -->
                                {% if user and user.autorisation in ['0', '1', '2'] %}
                                <div class="admin-actions">
                                    <a href="/regions/{{ region.id }}/edit" class="btn-admin-edit" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-admin-delete" onclick="confirmDelete({{ region.id }}, '{{ region.name }}')" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h3>Aucune région trouvée</h3>
                        <p>Aucune région ne correspond à vos critères de recherche.</p>
                    </div>
                {% endif %}
            </div>
            
            <!-- Vue liste -->
            <div class="regions-list entities-list view-list" id="regions-list">
                {% if regions is defined and regions|length > 0 %}
                    {% for region in regions %}
                        <div class="region-list-item entity-list-item" data-region-id="{{ region.id }}">
                            <div class="item-content">
                                <h4 class="item-title">{{ region.name }}</h4>
                                <p class="item-subtitle">{{ region.country_name|default('Suisse') }}</p>
                                {% if region.description %}
                                    <p class="item-description">{{ region.description|slice(0, 150) }}{{ region.description|length > 150 ? '...' : '' }}</p>
                                {% endif %}
                                <div class="item-meta">
                                    {% if region.altitude %}
                                        <span><i class="fas fa-mountain"></i> {{ region.altitude }}m</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="item-actions">
                                <a href="/regions/{{ region.id }}" class="btn btn-primary">Voir</a>
                                <button class="btn btn-outline-secondary" title="Météo" data-action="weather" data-id="{{ region.id }}">
                                    <i class="fas fa-cloud-sun"></i>
                                </button>
                                <button class="btn btn-outline-secondary" title="Carte" data-action="map" data-id="{{ region.id }}">
                                    <i class="fas fa-map"></i>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            <!-- Vue compacte -->
            <div class="regions-compact entities-compact view-compact" id="regions-compact">
                {% if regions is defined and regions|length > 0 %}
                    {% for region in regions %}
                        <div class="region-compact-item entity-compact-item" data-region-id="{{ region.id }}">
                            <div class="compact-name">
                                <a href="/regions/{{ region.id }}">{{ region.name }}</a>
                            </div>
                            <div class="compact-meta">
                                <span class="compact-country">{{ region.country_name|default('Suisse') }}</span>
                                {% if region.altitude %}
                                    <span class="compact-altitude">{{ region.altitude }}m</span>
                                {% endif %}
                            </div>
                            <div class="compact-actions">
                                <button title="Météo" data-action="weather" data-id="{{ region.id }}"><i class="fas fa-cloud-sun"></i></button>
                                <button title="Carte" data-action="map" data-id="{{ region.id }}"><i class="fas fa-map"></i></button>
                                <button title="Favoris" data-action="favorite" data-id="{{ region.id }}"><i class="fas fa-heart"></i></button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <!-- Pagination -->
        {% if pagination is defined and pagination.totalPages > 1 %}
        <nav aria-label="Navigation des pages" class="pagination-nav">
            <ul class="pagination justify-content-center">
                {% if pagination.currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.currentPage - 1 }}">
                            <i class="fas fa-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% endif %}
                
                {% for page in 1..pagination.totalPages %}
                    {% if page == pagination.currentPage %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page == 1 or page == pagination.totalPages or (page >= pagination.currentPage - 2 and page <= pagination.currentPage + 2) %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == pagination.currentPage - 3 or page == pagination.currentPage + 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}
                
                {% if pagination.currentPage < pagination.totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.currentPage + 1 }}">
                            Suivant <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}
    </div>
</div>

<script src="{{ url('/js/pages-common.js') }}"></script>
<script src="{{ url('/js/view-manager.js') }}"></script>
<script>
// Fonction de confirmation de suppression
function confirmDelete(regionId, regionName) {
    if (confirm(`Êtes-vous sûr de vouloir supprimer la région "${regionName}" ?\n\nCette action est irréversible et supprimera également tous les sites, secteurs et voies associés.`)) {
        // Créer un formulaire pour la requête DELETE
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/regions/${regionId}`;
        form.style.display = 'none';
        
        // Ajouter le champ _method pour DELETE
        const methodInput = document.createElement('input');
        methodInput.type = 'hidden';
        methodInput.name = '_method';
        methodInput.value = 'DELETE';
        form.appendChild(methodInput);
        
        // Ajouter le token CSRF si disponible
        const csrfToken = document.querySelector('meta[name="csrf-token"]');
        if (csrfToken) {
            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_token';
            csrfInput.value = csrfToken.getAttribute('content');
            form.appendChild(csrfInput);
        }
        
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}