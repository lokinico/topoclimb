{% extends "layouts/app.twig" %}

{% import "components/pagination.twig" as pagination %}

{% block body_class %} routes-index-page{% endblock %}

{% block head %}
    <link rel="stylesheet" href="/css/pages-common.css">
    <link rel="stylesheet" href="/css/view-modes.css">
    <link rel="stylesheet" href="/css/pagination.css">
{% endblock %}

{% block title %}Voies d'escalade - TopoclimbCH{% endblock %}

{% block content %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Voies d'escalade</h1>
            
            <div class="actions">
                {% if user and user.autorisation in ['0', '1', '2'] %}
                    <a href="/routes/create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Ajouter une voie
                    </a>
                {% endif %}
            </div>
        </div>
        
        <!-- Controls d'affichage et statistiques -->
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
            <div class="results-info">
                <span class="text-muted">{{ routes|length }} voie(s) trouv√©e(s)</span>
                {% if stats %}
                    <span class="text-muted ms-3">
                        Total: {{ stats.total_routes ?? 0 }} voies
                        {% if stats.avg_length %} | Longueur moy.: {{ stats.avg_length }}m{% endif %}
                    </span>
                {% endif %}
            </div>
            
            <!-- Controls d'affichage -->
            <div class="view-controls">
                <div class="btn-group" role="group" aria-label="Mode d'affichage">
                    <button type="button" class="btn btn-outline-primary active" data-view="grid">
                        <i class="fas fa-th"></i> Cartes
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="list">
                        <i class="fas fa-list"></i> Liste
                    </button>
                    <button type="button" class="btn btn-outline-primary" data-view="compact">
                        <i class="fas fa-bars"></i> Compact
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filtres avanc√©s pour les voies -->
    <div class="filters mb-4">
        <form method="GET" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label for="region_id" class="form-label">R√©gion</label>
                <select name="region_id" id="region_id" class="form-select">
                    <option value="">Toutes les r√©gions</option>
                    {% for region in regions %}
                        <option value="{{ region.id }}" {% if filters.region_id == region.id %}selected{% endif %}>
                            {{ region.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-2">
                <label for="sector_id" class="form-label">Secteur</label>
                <select name="sector_id" id="sector_id" class="form-select">
                    <option value="">Tous les secteurs</option>
                    {% for sector in sectors %}
                        <option value="{{ sector.id }}" {% if filters.sector_id == sector.id %}selected{% endif %}>
                            {{ sector.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-2">
                <label for="length_min" class="form-label">Longueur min</label>
                <input type="number" name="length_min" id="length_min" class="form-control" 
                       placeholder="10" min="1" max="1000" value="{{ filters.length_min ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <label for="length_max" class="form-label">Longueur max</label>
                <input type="number" name="length_max" id="length_max" class="form-control" 
                       placeholder="100" min="1" max="1000" value="{{ filters.length_max ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <label for="search" class="form-label">Rechercher</label>
                <input type="search" name="search" id="search" class="form-control" 
                       placeholder="Nom de voie..." value="{{ filters.search ?? '' }}">
            </div>
            
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Filtrer
                </button>
            </div>
            
            <!-- Conserver les param√®tres de pagination -->
            {% if filters.per_page %}
                <input type="hidden" name="per_page" value="{{ filters.per_page }}">
            {% endif %}
        </form>
    </div>
    
    <!-- Conteneur principal -->
    <div class="routes-container entities-container" id="routes-container">
        <!-- Vue grille (cartes) -->
        <div class="routes-grid entities-grid view-grid active" id="routes-grid">
            {% if routes|length > 0 %}
                <div class="row g-3">
                    {% for route in routes %}
                        <div class="col-md-6 col-lg-4">
                            <div class="route-card entity-card card h-100" data-route-id="{{ route.id }}">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-1">
                                            <a href="/routes/{{ route.id }}" class="text-decoration-none">{{ route.name }}</a>
                                        </h5>
                                        <div class="route-actions">
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    title="Favoris" data-action="favorite" data-id="{{ route.id }}">
                                                <i class="far fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <div class="route-meta text-muted small mb-2">
                                        {% if route.difficulty %}
                                            <span class="badge bg-primary me-2">{{ route.difficulty }}</span>
                                        {% endif %}
                                        {% if route.length %}
                                            <span class="me-2">üìè {{ route.length }}m</span>
                                        {% endif %}
                                        {% if route.beauty_rating %}
                                            <span class="me-2">‚≠ê {{ route.beauty_rating }}/5</span>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="route-location text-muted small mb-2">
                                        {% if route.sector_name %}
                                            <span class="me-2">üìç {{ route.sector_name }}</span>
                                        {% endif %}
                                        {% if route.region_name %}
                                            <span class="me-2">üèîÔ∏è {{ route.region_name }}</span>
                                        {% endif %}
                                    </div>
                                    
                                    {% if route.description %}
                                        <p class="card-text">{{ route.description|slice(0, 120) ~ (route.description|length > 120 ? '...' : '') }}</p>
                                    {% endif %}
                                    
                                    <div class="route-stats mt-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                {% if route.created_at %}
                                                    Cr√©√© {{ route.created_at|date('d/m/Y') }}
                                                {% endif %}
                                            </small>
                                            {% if route.danger_rating %}
                                                <span class="badge bg-warning">
                                                    Danger: {{ route.danger_rating }}/5
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-route fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucune voie trouv√©e</h4>
                    <p class="text-muted">
                        {% if error %}
                            {{ error }}
                        {% else %}
                            Essayez de modifier vos crit√®res de recherche
                        {% endif %}
                    </p>
                    <a href="/routes" class="btn btn-outline-primary">
                        R√©initialiser les filtres
                    </a>
                </div>
            {% endif %}
        </div>
        
        <!-- Vue Liste -->
        <div class="routes-list entities-list view-list" id="routes-list">
            {% if routes|length > 0 %}
                {% for route in routes %}
                    <div class="list-item d-flex align-items-center p-3 mb-2 bg-white rounded shadow-sm" data-route-id="{{ route.id }}">
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-start justify-content-between mb-1">
                                <h5 class="mb-0">
                                    <a href="/routes/{{ route.id }}" class="text-decoration-none">{{ route.name }}</a>
                                </h5>
                                <div class="route-badges">
                                    {% if route.difficulty %}
                                        <span class="badge bg-primary">{{ route.difficulty }}</span>
                                    {% endif %}
                                    {% if route.beauty_rating %}
                                        <span class="badge bg-success">‚≠ê {{ route.beauty_rating }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="text-muted small mb-1">
                                {% if route.sector_name %}
                                    üìç {{ route.sector_name }}
                                {% endif %}
                                {% if route.region_name %}
                                    - üèîÔ∏è {{ route.region_name }}
                                {% endif %}
                                {% if route.length %} - üìè {{ route.length }}m{% endif %}
                            </div>
                            
                            {% if route.description %}
                                <p class="mb-1 text-muted">{{ route.description|slice(0, 150) }}{{ route.description|length > 150 ? '...' : '' }}</p>
                            {% endif %}
                        </div>
                        
                        <div class="ms-3">
                            <button class="btn btn-sm btn-outline-secondary" title="Favoris" data-action="favorite" data-id="{{ route.id }}">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-route fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucune voie trouv√©e</h4>
                    <p class="text-muted">Essayez de modifier vos crit√®res de recherche</p>
                </div>
            {% endif %}
        </div>
        
        <!-- Vue Compacte -->
        <div class="routes-compact entities-compact view-compact" id="routes-compact">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Difficult√©</th>
                            <th>Longueur</th>
                            <th>Secteur</th>
                            <th>R√©gion</th>
                            <th>Beaut√©</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if routes|length > 0 %}
                            {% for route in routes %}
                                <tr data-route-id="{{ route.id }}">
                                    <td>
                                        <a href="/routes/{{ route.id }}" class="text-decoration-none fw-medium">{{ route.name }}</a>
                                    </td>
                                    <td>
                                        {% if route.difficulty %}
                                            <span class="badge bg-primary">{{ route.difficulty }}</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-muted">{{ route.length|default('-') }}m</td>
                                    <td class="text-muted">{{ route.sector_name|default('-') }}</td>
                                    <td class="text-muted">{{ route.region_name|default('-') }}</td>
                                    <td class="text-center">
                                        {% if route.beauty_rating %}
                                            <span class="text-warning">
                                                {% for i in 1..route.beauty_rating %}‚≠ê{% endfor %}
                                            </span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-secondary" title="Favoris" data-action="favorite" data-id="{{ route.id }}">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-route fa-2x text-muted mb-2"></i>
                                        <div class="text-muted">Aucune voie trouv√©e</div>
                                    </div>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    {% if paginator %}
        {{ pagination.renderWithSelector(paginator, filters) }}
    {% endif %}
{% endblock %}

{% block scripts %}
<script src="/js/pages-common.js"></script>
<script src="/js/view-manager.js"></script>
<script src="/js/pagination.js"></script>
<script>
// JavaScript pour la gestion des vues et des actions
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des onglets de vue
    const viewButtons = document.querySelectorAll('[data-view]');
    const viewContainers = document.querySelectorAll('.view-grid, .view-list, .view-compact');
    
    viewButtons.forEach(button => {
        button.addEventListener('click', function() {
            const targetView = this.getAttribute('data-view');
            
            // Mettre √† jour les boutons
            viewButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Mettre √† jour les vues
            viewContainers.forEach(container => {
                container.classList.remove('active');
                if (container.classList.contains('view-' + targetView)) {
                    container.classList.add('active');
                }
            });
        });
    });
    
    // Actions des voies
    document.addEventListener('click', function(e) {
        if (e.target.closest('[data-action]')) {
            const button = e.target.closest('[data-action]');
            const action = button.getAttribute('data-action');
            const routeId = button.getAttribute('data-id');
            
            switch(action) {
                case 'favorite':
                    alert('Fonctionnalit√© favoris √† impl√©menter pour la voie ' + routeId);
                    break;
            }
        }
    });
    
    // Filtrage dynamique des secteurs selon la r√©gion
    const regionSelect = document.getElementById('region_id');
    const sectorSelect = document.getElementById('sector_id');
    
    if (regionSelect && sectorSelect) {
        regionSelect.addEventListener('change', function() {
            const regionId = this.value;
            // TODO: Impl√©menter le filtrage AJAX des secteurs
            console.log('Filtrer secteurs pour r√©gion:', regionId);
        });
    }
});
</script>

<style>
.route-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.route-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.route-actions .btn {
    margin-left: 0.25rem;
}

.route-actions .btn:first-child {
    margin-left: 0;
}

.route-badges .badge {
    margin-left: 0.25rem;
}

.route-badges .badge:first-child {
    margin-left: 0;
}

.results-info {
    font-size: 0.9rem;
}

.empty-state {
    background: #f8f9fa;
    border-radius: 0.5rem;
    border: 2px dashed #dee2e6;
}

.filters {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 0.5rem;
}

/* Vue management */
.view-list, .view-compact {
    display: none;
}

.view-list.active, .view-compact.active {
    display: block;
}

.view-grid.active {
    display: block;
}

@media (max-width: 768px) {
    .route-actions {
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .route-actions .btn {
        margin-left: 0;
        font-size: 0.75rem;
    }
}
</style>
{% endblock %}