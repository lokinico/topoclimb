{
    "name": "topoclimbch/application",
    "description": "Application de gestion de sites d'escalade en Suisse",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "symfony/http-foundation": "^6.3",
        "symfony/routing": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/event-dispatcher": "^6.3",
        "symfony/console": "^6.3",
        "symfony/var-exporter": "^6.3",
        "symfony/translation": "^6.3",
        "symfony/translation-contracts": "^3.0",
        "symfony/validator": "^6.3",
        "symfony/property-access": "^6.3",
        "symfony/property-info": "^6.3",
        "symfony/serializer": "^6.3",
        "doctrine/dbal": "^3.6",
        "twig/twig": "^3.7",
        "respect/validation": "^2.2",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.7",
        "league/flysystem": "^3.15",
        "symfony/mailer": "^6.3",
        "intervention/image": "^2.7",
        "filp/whoops": "^2.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^6.3",
        "filp/whoops": "^2.15",
        "fakerphp/faker": "^1.23",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "TopoclimbCH\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TopoclimbCH\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:functional": "phpunit --testsuite=Functional",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "cs": "phpcs --standard=PSR12 src tests",
        "stan": "phpstan analyse src --level=5",
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}